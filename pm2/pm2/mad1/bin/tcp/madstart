# Just in case MAD1_ROOT is not defined
MAD1_ROOT=${MAD1_ROOT-${PM2_ROOT}/mad1}
export MAD1_ROOT

PM2_CONF_FILE=$1
shift
DISPLAY=$1
shift
MAD_DEBUG=$1
shift
MAD_NUM_NODES=$1
shift
MAD_MY_NUMBER=$1
shift
MAD_MY_NAME=$1
shift
MAD_SERVER_PORT=$1
shift
MAD_SERVER_HOST=$1
shift

export PM2_CONF_FILE
export DISPLAY
export MAD_DEBUG
export MAD_NUM_NODES
export MAD_MY_NUMBER
export MAD_MY_NAME
export MAD_SERVER_PORT
export MAD_SERVER_HOST

if test "$MAD_DEBUG" = on
then
    ${MAD1_ROOT}/bin/tcp/maddebug "$@" &
else
    "$@" &
fi

