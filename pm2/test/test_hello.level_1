compile_leonie()
{
        (cd ${PM2_ROOT}/leonie ; make FLAVOR=leonie)
}

# Verification et compilation du lanceur leonie
#leonie --help > /dev/null 2>&1 || compile_leonie
compile_leonie

# Configuration
flavor="test_pm2"
appdir="${PM2_ROOT}/pm2/examples/simple"
prog="remote_hello"
args="a b c"
hosts=${TESTCONFIG:-"localhost localhost"}

# Creation de la flavor
eval ${PM2_ROOT}/bin/pm2-flavor set --flavor=\"$flavor\" \
	--ext=\"\" \
	--modules=\"marcel mad3 ntbx tbx pm2 init\" \
	--marcel=\"mono poll\" --marcel=\"marcel_main\" \
	--mad3=\"tcp\" \
	--all=\"opt\" --all=\"build_static\" $_output_redirect

cat > /tmp/pm2test_"${USER}"_expected <<EOF
[n1] Hello world!
[n1] argc = 4
[n1] argv[0] = <`pm2-config --builddir --flavor=$flavor`/examples/simple/bin/remote_hello>
[n1] argv[1] = <a>
[n1] argv[2] = <b>
[n1] argv[3] = <c>
EOF

