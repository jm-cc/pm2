PM2_ROOT := @abs_top_srcdir@
PM2_SRCROOT := @abs_top_srcdir@
PM2_OBJROOT := @abs_top_builddir@
export PM2_ROOT PM2_SRCROOT PM2_OBJROOT

include $(PM2_OBJROOT)/make/common-vars.mak

pm2_build_dir  := $(shell $(PM2_OBJROOT)/bin/pm2-config --flavor=$(FLAVOR) --builddir)
PUK_ROOT       := $(pm2_build_dir)/puk
PUK_SRCDIR     := @abs_srcdir@
PUK_BUILDDIR   := $(PUK_ROOT)/build
PUK_INSTALLDIR := $(PUK_ROOT)

PADICO_ROOT    := $(PUK_ROOT)

PUK_CONFIG_FILES := \
  $(PUK_SRCDIR)/externals/configure \
  $(PUK_SRCDIR)/externals/Puk/padico_config.h.in \
  $(PUK_SRCDIR)/VERSION

PUK_ENABLE_PUKABI     := $(shell $(PM2_OBJROOT)/bin/pm2-config --flavor=$(FLAVOR) --getvar=PM2_PUK_ENABLE_PUKABI)

PUK_LIBS = $(PADICO_ROOT)/lib/libPadicoPuk.so

ifeq ($(PUK_ENABLE_PUKABI),yes)
  PUK_LIBS += $(PADICO_ROOT)/lib/PukABI/libPukABI.so
endif


# ## front-end rules
# ##


libs: $(PUK_LIBS)
	-@mkdir -p $(pm2_build_dir)/lib/
	@cp $(PUK_LIBS) $(pm2_build_dir)/lib/

link:

dot_h: $(PUK_LIBS)

clean:
	-rm -r $(PUK_ROOT)/puk

flavormaks:

# ## configure
# ##

PM2_PUK_CONFIGURE_EXTRA_FLAGS := $(shell $(PM2_OBJROOT)/bin/pm2-config --flavor=$(FLAVOR) --getvar=PM2_PUK_CONFIGURE_EXTRA_FLAGS)

$(PUK_BUILDDIR)/config.status:
	-@mkdir -p $(PUK_BUILDDIR)
	-@echo "   configuring Puk"
	( cd $(PUK_BUILDDIR) ; \
           $(PUK_SRCDIR)/externals/configure LIBS= LDFLAGS= CFLAGS= --prefix=$(PUK_INSTALLDIR) $(PM2_PUK_CONFIGURE_EXTRA_FLAGS) )

# ## build
# ##

$(PUK_BUILDDIR)/Puk/libPadicoPuk.so: $(PUK_BUILDDIR)/config.status
	$(MAKE) PADICO_ROOT=$(PADICO_ROOT) -C $(PUK_BUILDDIR)/Puk

$(PUK_BUILDDIR)/PukABI/libPukABI.so: $(PUK_BUILDDIR)/config.status
	$(MAKE) PADICO_ROOT=$(PADICO_ROOT) -C $(PUK_BUILDDIR)/PukABI

# ## build
# ##

check: $(PUK_BUILDDIR)/Puk/libPadicoPuk.so

# ## install
# ##

$(PADICO_ROOT)/lib/libPadicoPuk.so: $(PUK_BUILDDIR)/Puk/libPadicoPuk.so
	$(MAKE) PADICO_ROOT=$(PADICO_ROOT) -C $(PUK_BUILDDIR)/Puk install
	@touch $(PADICO_ROOT)/lib/libPadicoPuk.so

$(PADICO_ROOT)/lib/PukABI/libPukABI.so: $(PUK_BUILDDIR)/PukABI/libPukABI.so
	$(MAKE) PADICO_ROOT=$(PADICO_ROOT) -C $(PUK_BUILDDIR)/PukABI install


