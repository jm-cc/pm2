_PM2WHICH_PROGNAME=pm2which

pm2which_error() # msg
{
    echo $* >&2
    exit 1
}

pm2which_usage() # exit_code
{
    cat <<EOF
Usage: $_PM2WHICH_PROGNAME [option..] command

  option:
    -f name : Use flavor named "name" (default=\$PM2_FLAVOR or default)
    -p      : Print possible prefixed notations (used to remove ambiguity)
    -h      : Display this help message
EOF
    exit $1
}

pm2which_prettyprint() # path path...
{
    for p
    do
	if [ $_PM2WHICH_SHOW_PREFIX = yes ]; then
	    case "$PM2_SYS" in
		CYGWIN*_SYS|MINGWIN*_SYS)
		    echo $p | sed -e 's|.*examples/\(.*\)/bin/\(.*\)|\1:\2|' -e 's|\.exe$||g'
		    ;;
		*)
		    echo $p | sed -e 's|.*examples/\(.*\)/bin/\(.*\)|\1:\2|'
		    ;;
	    esac
	else
	    echo $p
	fi
    done
}

pm2which_handle_colon() # dir:name
{
    _old_ifs="$IFS"
    _ifs_not_set=${IFS-yes}
    IFS=":"
    set $*
    IFS=" "
    if [ "$_ifs_not_set" = yes ]; then
        unset IFS
    else
        IFS="$_old_ifs"
    fi

    _dir=$1
    _name=$2
    [ -x ${_PM2WHICH_EXDIR}/${_dir}/bin/${_name} ] || pm2which_error "Error: \"${_PM2WHICH_EXDIR}/${_dir}/bin/${_name}\" exec file not found."
    _PM2WHICH_RESULT="${_PM2WHICH_EXDIR}/${_dir}/bin/${_name}"
    _PM2WHICH_NB_FOUND=1
}

pm2which_do_search() # file
{
    _file=$1
    _fifo=$_PM2WHICH_EXDIR
    _PM2WHICH_RESULT=""

    while [ -n "$_fifo" ] ; do
	set $_fifo
	_rep=$1
	shift
	_fifo="$*"

	for _f in $_rep/* ; do
	    if [ -d "$_f" ] ; then
		_fifo="$_fifo $_f"
	    elif [ "$_rep/$_file" = "$_f" -a -x "$_f" ] ; then
		_PM2WHICH_RESULT="${_PM2WHICH_RESULT:+$_PM2WHICH_RESULT }$_f"
	    #else : ni un sous-répertoire, ni le fichier que l'on cherche
	    fi
	done
    done

    if [ -n "$_PM2WHICH_RESULT" ] ; then
	set $_PM2WHICH_RESULT
	_PM2WHICH_NB_FOUND=$#
    else
	_PM2WHICH_NB_FOUND=0
    fi
}

pm2which_calc()
{
    _PM2WHICH_ARGS="$*"
    # On regarde si le nom de la commande est relatif/absolu

    case "$PM2_SYS" in
	CYGWIN*_SYS|MINGWIN*_SYS)
	    _ext=".exe"
	    ;;
	*)
	    _ext=""
	    ;;
    esac

    _prog="$1"


    DIRS=$_PM2CONFIG_BUILD
    if [ -n "$PATH" ]; then
        DIRS="$DIRS:$PATH"
    fi

    _old_ifs="$IFS"
    _ifs_not_set=${IFS-yes}
    IFS=":"
    set -- $DIRS
    IFS=" "
    if [ "$_ifs_not_set" = yes ]; then
        unset IFS
    else
        IFS="$_old_ifs"
    fi

    export _PM2WHICH_RESULT
    export _PM2WHICH_NB_FOUND
    export _PM2WHICH_EXDIR

    first=1

    while [ $# -gt 0  ]; do
        _PM2WHICH_EXDIR=$1
        shift

        case "$_prog" in
            /*)
                if [ -x "$_prog" ]; then
                    _PM2WHICH_RESULT="$_prog"
                    _PM2WHICH_NB_FOUND=1
                fi
                ;;
            *:*)
                pm2which_handle_colon $_prog$_ext
                ;;
            *)
                if [ $first -eq 1 ]; then
                    if [ -f "$_prog" -a -x "$_prog" ]; then
                        _PM2WHICH_RESULT="$PWD/$_prog"
                        _PM2WHICH_NB_FOUND=1
                    else
                        pm2which_do_search $_prog$_ext
                    fi
                else
                    __prog="$_PM2WHICH_EXDIR/$_prog"
                    if [ -f "$__prog" -a -x "$__prog" ]; then
                        _PM2WHICH_RESULT=$__prog
                        _PM2WHICH_NB_FOUND=1
                    fi                    
                fi
                ;;
        esac

        if [ -n "$_PM2WHICH_NB_FOUND" ] && [ $_PM2WHICH_NB_FOUND -gt 0 ]; then
            break
        fi

        first=0
    done
}

# Programme principal

PM2_FLAVOR=${PM2_FLAVOR:-default}
export PM2_FLAVOR

_PM2WHICH_SHOW_PREFIX=no
_PM2WHICH_SOURCE_MODE=no

while [ $# -gt 0 ]; do
    case $1 in
	-f)
	    shift
	    PM2_FLAVOR="$1"
	    shift
	    ;;
	-p)
	    shift
	    _PM2WHICH_SHOW_PREFIX=yes
	    ;;
	-h)
	    pm2which_usage 0
	    ;;
	--source-mode)
	    _PM2WHICH_SOURCE_MODE=yes
	    shift
	    ;;
	--)
	    shift
	    break
	    ;;
	*)
	    if [ "$_PM2WHICH_PROG" ]; then
		pm2which_usage 1
	    fi
	    _PM2WHICH_PROG="$1"
	    shift
	    ;;
    esac
done

_PROG="$_PM2WHICH_PROG"

#On rajoute puis on vire un --source-mode
set -- --source-mode "$@"
. ${PM2_ROOT}/bin/pm2-config
shift

pm2which_calc "$_PM2WHICH_PROG"
if [ $_PM2WHICH_SOURCE_MODE = no ]; then
    if [ -z "$_PM2WHICH_NB_FOUND" ] || [ $_PM2WHICH_NB_FOUND -eq 0 ] ; then
        echo "pm2which: '${_PROG}' exec file not found" 1>&2
    else
        pm2which_prettyprint $_PM2WHICH_RESULT
    fi
    if [ -n "$_PM2WHICH_NB_FOUND" ] && [ $_PM2WHICH_NB_FOUND -eq 1 ] ; then
	exit 0
    else
	exit 1
    fi
else
    if [ -z "$_PM2WHICH_NB_FOUND" ] || [ $_PM2WHICH_NB_FOUND -eq 0 ] ; then
        pm2which_error "pm2which: '${_PROG}' exec file not found"
    fi
    if [ -z "$_PM2WHICH_NB_FOUND" ] || [ $_PM2WHICH_NB_FOUND -gt 1 ] ; then
        pm2which_error "pm2which: multiple ${_PROG} example binaries found"
    fi
fi

