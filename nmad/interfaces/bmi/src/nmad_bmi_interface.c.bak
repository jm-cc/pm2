static int
bnm_open_endpoint(mx_endpoint_t *ep, uint32_t board, uint32_t ep_id)
{
        mx_return_t     mxret   = MX_SUCCESS;
        mx_param_t      param;

        /* This will tell MX to use context IDs. Normally, MX has one
         * set of queues for posted recvs, unexpected, etc. This will
         * create seaparate sets of queues for each msg type. 
         * The benefit is that we can call mx_test_any() for each 
         * message type and not have to scan a long list of non-
         * matching recvs. */
        param.key = MX_PARAM_CONTEXT_ID;
        param.val.context_id.bits = 4;
        param.val.context_id.shift = BNM_MSG_SHIFT;

        if (board == -1) board = 0;
        mxret = mx_open_endpoint(board, ep_id, BNM_MAGIC,
                                 &param, 1, ep);
        if (mxret != MX_SUCCESS) {
                return -1;
        }

        mxret = mx_register_unexp_handler(*ep, (mx_unexp_handler_t)
                                          bnm_unexpected_recv, NULL);
        if (mxret != MX_SUCCESS) {
                debug(BNM_DB_WARN, "mx_register_unexp_callback() failed "
                                "with %s", mx_strerror(mxret));
                mx_close_endpoint(*ep);
                mx_finalize();  
                return -1;
        }

        mxret = mx_set_request_timeout(*ep, NULL, BNM_TIMEOUT);
        if (mxret != MX_SUCCESS) {
                debug(BNM_DB_WARN, "mx_set_request_timeout() failed with %s",
                                 mx_strerror(mxret));
                mx_close_endpoint(*ep);
                mx_finalize();
                return -1;
        }

        return 0;
}

/* The listen_addr is our method if we are a server. It is NULL for a
 * client. The other params are NULL/0 for the client as well. */
static int
BMI_mx_initialize(bmi_method_addr_p listen_addr, int method_id, int init_flags)
{
        int             i       = 0;
        int             ret     = 0;
        mx_return_t     mxret   = MX_SUCCESS;

         /* check params */
        if (!!listen_addr ^ (init_flags & BMI_INIT_SERVER)) {
                debug(BNM_DB_ERR, "mx_initialize() with illegal parameters. "
                        "BMI_INIT_SERVER requires non-null listen_addr");
                exit(1);
        }

        ret = bnm_globals_init(method_id);
        if (ret != 0) {
                debug(BNM_DB_WARN, "bnm_globals_init() failed with no memory");
                return -BMI_ENOMEM;
        }

        /* disable shmem to allow clients and servers on the same machine */
        setenv("MX_DISABLE_SHMEM", "1", 1);

        /* return errors, do not abort */
        mx_set_error_handler(MX_ERRORS_RETURN);

        /* only complete sends after they are delivered */
        setenv("MX_ZOMBIE", "0", 1);

        mxret = mx_init();
        if (!(mxret == MX_SUCCESS || mxret == MX_ALREADY_INITIALIZED)) {
                debug(BNM_DB_WARN, "mx_init() failed with %s", mx_strerror(mxret));
                BNM_FREE(bmi_mx, sizeof(*bmi_mx));
                return -BMI_ENODEV;
        }

        /* if we are a server, open an endpoint now. If a client, wait until first
         * sendunexpected or first recv. */
        if (init_flags & BMI_INIT_SERVER) {
                struct bnm_ctx         *rx     = NULL;
                struct bnm_method_addr *mxmap  = listen_addr->method_data;
                mx_endpoint_addr_t      epa;
                uint32_t                ep_id   = 0;
                uint32_t                sid     = 0;
                uint64_t                nic_id  = 0ULL;
                struct bnm_peer         *peer   = NULL;

                bmi_mx->bnm_hostname = strdup(mxmap->mxm_hostname);
                bmi_mx->bnm_board = mxmap->mxm_board;
                bmi_mx->bnm_ep_id = mxmap->mxm_ep_id;
                bmi_mx->bnm_is_server = 1;
                bnm_create_peername();

                ret = bnm_open_endpoint(&bmi_mx->bnm_ep, mxmap->mxm_board, mxmap->mxm_ep_id);
                if (ret != 0) {
                        debug(BNM_DB_ERR, "open_endpoint() failed");
                        BNM_FREE(bmi_mx, sizeof(*bmi_mx));
                        exit(1);
                }

                /* get our MX session id */
                mx_get_endpoint_addr(bmi_mx->bnm_ep, &epa);
                mx_decompose_endpoint_addr2(epa, &nic_id, &ep_id, &sid);
                bmi_mx->bnm_sid = sid;

                bnm_peer_alloc(&peer, mxmap);

                /* We allocate BNM_PEER_RX_NUM when we peer_alloc()
                 * Allocate some here to catch the peer CONN_REQ */
                for (i = 0; i < BNM_SERVER_RXS; i++) {
                        ret = bnm_ctx_alloc(&rx, BNM_REQ_RX);
                        if (ret == 0) {
                                bnm_put_idle_rx(rx);
                        }
                }
        }

#if BNM_MEM_TWEAK
        for (i = 0; i < BNM_BUFF_NUM; i++) {
                struct bnm_buffer *buf  = NULL;
                BNM_MALLOC(buf, sizeof(*buf));
                if (buf) {
                        INIT_QLIST_HEAD(&buf->mxb_list);
                        BNM_MALLOC(buf->mxb_buffer, BNM_BUFF_SIZE);
                        if (buf->mxb_buffer) {
                                qlist_add(&buf->mxb_list, &bmi_mx->bnm_idle_buffers);
                        } else {
                                BNM_FREE(buf, sizeof(*buf));
                        }
                }
        }
#endif

#if BNM_MEM_ACCT
        debug(BNM_DB_MEM, "memory used at end of initialization %lld", llu(mem_used));
#endif
        BNM_EXIT;

        return 0;
}

static int
BMI_mx_finalize(void)
{
        struct bnm_data *tmp = bmi_mx;

        BNM_ENTER;

        gen_mutex_lock(&tmp->bnm_lock);

        /* shutdown MX */
        mx_wakeup(bmi_mx->bnm_ep);
        mx_close_endpoint(bmi_mx->bnm_ep);
        mx_finalize();

        /* free rxs */
        {
                struct bnm_ctx *rx   = NULL;
                struct bnm_ctx *next = NULL;
                qlist_for_each_entry_safe(rx, next, &bmi_mx->bnm_rxs, mxc_global_list) {
                        bnm_ctx_free(rx);
                }
        }

        /* free txs */
        {
                struct bnm_ctx *tx   = NULL;
                struct bnm_ctx *next = NULL;
                qlist_for_each_entry_safe(tx, next, &bmi_mx->bnm_txs, mxc_global_list) {
                        bnm_ctx_free(tx);
                }
        }

        /* free peers */
        {
                struct bnm_peer *peer   = NULL;
                struct bnm_peer *next   = NULL;
                qlist_for_each_entry_safe(peer, next, &bmi_mx->bnm_peers, mxp_list) {
                        bnm_peer_free(peer);
                }
        }

#if BNM_MEM_TWEAK
        {
                list_t *idle = &bmi_mx->bnm_idle_buffers;
                list_t *used = &bmi_mx->bnm_used_buffers;
                struct bnm_buffer *mem  = NULL;
                struct bnm_buffer *next = NULL;

                qlist_for_each_entry_safe(mem, next, idle, mxb_list) {
                        if (mem->mxb_used != 0)
                                debug(BNM_DB_MEM, "idle buffer used %d times", 
                                                  mem->mxb_used);
                        BNM_FREE(mem->mxb_buffer, BNM_BUFF_SIZE);
                        BNM_FREE(mem, sizeof(*mem));
                }
                qlist_for_each_entry_safe(mem, next, used, mxb_list) {
                        if (mem->mxb_used != 0)
                                debug(BNM_DB_MEM, "used buffer used %d times", 
                                                  mem->mxb_used);
                        BNM_FREE(mem->mxb_buffer, BNM_BUFF_SIZE);
                        BNM_FREE(mem, sizeof(*mem));
                }
                debug(BNM_DB_MEM, "%d misses", bmi_mx->bnm_misses);
        }
#endif

        if (bmi_mx->bnm_hostname) {
                free(bmi_mx->bnm_hostname);
                bmi_mx->bnm_hostname = NULL;
        }
        if (bmi_mx->bnm_peername) {
                free(bmi_mx->bnm_peername);
                bmi_mx->bnm_peername = NULL;
        }

        bmi_mx = NULL;

        gen_mutex_unlock(&tmp->bnm_lock);

        BNM_FREE(tmp, sizeof(*tmp));

#if BNM_MEM_ACCT
        debug(BNM_DB_MEM, "memory leaked at shutdown %lld", llu(mem_used));
#endif

        BNM_EXIT;

        return 0;
}


