## This Makefile should be run with GNU make

ifndef PM2_FLAVOR
$(error PM2_FLAVOR is not yet defined!)
endif

CFLAGS		:= $(shell pm2-config --cflags)
LDFLAGS		:= $(shell pm2-config --libs)
CC		:= $(shell pm2-config --cc)

.PHONY: all clean

CFILES		:= $(wildcard *.c)
OFILES		:= $(CFILES:%.c=%.o)
EXEFILES	:= $(CFILES:%.c=%)

ifdef PM2_BUILD_DIR
TARGET	:=	${PM2_BUILD_DIR}/${PM2_ASM}/${PM2_FLAVOR}/examples/bin
else
TARGET	:=	${PM2_ROOT}/build/${PM2_ASM}/${PM2_FLAVOR}/examples/bin
endif

all: ${EXEFILES}

${TARGET}:
	-@mkdir ${TARGET}

${EXEFILES}: %: %.c ${TARGET}
	@echo "Compiling $< for flavor '${PM2_FLAVOR}'..."
	make -C ${PM2_ROOT}
	@${CC} ${CFLAGS} $< ${LDFLAGS} -o ${TARGET}/$@

clean:
	-rm ${EXEFILES} ${OFILES}
