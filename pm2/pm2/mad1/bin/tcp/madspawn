#
# madspawn attend les paramètres suivants :
# $1 : machine serveur
# $2 : confsize
# $3 : port serveur...
# $4 : console
# $5 à ... : executable a lancer et arguments
#

# Just in case MADELEINE_ROOT is not defined
MADELEINE_ROOT=${MADELEINE_ROOT-${PM2_ROOT}/mad1}
export MADELEINE_ROOT

serverhost=$1
shift
confsize=$1
shift
port=$1
shift
MAD_CONSOLE=$1
shift

command=$*

mynumber=1
nbmachines=`cat ${MADELEINE_ROOT}/.madconf | wc -w`

if test -z "$MAD_DEBUG"
then
    MAD_DEBUG=off
fi

if test -z "$DISPLAY"
then
    DISPLAY=:0
fi

if test $MAD_CONSOLE = "no"
then
    trueconfsize=$confsize
else
    trueconfsize=`expr $confsize - 1`
fi

while test $mynumber -lt $trueconfsize
do
    plusun=`expr $mynumber % $nbmachines + 1`
    host=`head -$plusun ${MADELEINE_ROOT}/.madconf | tail -1`
    rsh -n $host ${MADELEINE_ROOT}/bin/tcp/madstart $DISPLAY $MAD_DEBUG $confsize $mynumber $host $port $serverhost $command &
    mynumber=`expr $mynumber + 1`
done

if test ! $MAD_CONSOLE = "no"
then
    host=`head -1 ${MADELEINE_ROOT}/.madconf`
    rsh -n $host ${MADELEINE_ROOT}/bin/tcp/madstartcons $DISPLAY $MAD_CONSOLE $confsize $mynumber $host $port $serverhost &
fi
