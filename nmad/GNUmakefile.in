PM2_ROOT := @abs_top_srcdir@
PM2_SRCROOT := @abs_top_srcdir@
PM2_OBJROOT := @abs_top_builddir@

# LIBNAME -> nom de la librairie
#---------------------------------------------------------------------
LIBNAME=nmad
LIBDOC=newmadeleine

# Inclusion des makefiles generiques
#---------------------------------------------------------------------
include $(PM2_SRCROOT)/make/libs-vars.mak


# NewMad core
# ----------------------------------------------------------
MOD_SRC += $(PM2_SRCROOT)/nmad/core/src

# Drivers
#-----------------------------------------------------------
MOD_SRC += $(foreach DRV, $(NMAD_DRIVERS), $(PM2_SRCROOT)/nmad/drivers/$(DRV) )

# Strategies
#-----------------------------------------------------------
MOD_SRC += $(foreach STRAT, $(NMAD_STRATEGIES), $(PM2_SRCROOT)/nmad/strategies/strat_$(STRAT))

# Interfaces
#---------------------------------------------------------------------
MOD_SRC += $(foreach INTERFACE, $(NMAD_INTERFACES), $(PM2_SRCROOT)/nmad/interfaces/$(INTERFACE)/src)


# Datatype de MPICH
#---------------------------------------------------------------------
MOD_SRC += $(PM2_SRCROOT)/nmad/ccs

# Regles communes aux librairies
#---------------------------------------------------------------------
include $(PM2_SRCROOT)/make/libs-rules.mak

