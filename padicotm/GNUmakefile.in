# module: padicotm

PM2_ROOT    := @abs_top_srcdir@
PM2_SRCROOT := @abs_top_srcdir@
PM2_OBJROOT := @abs_top_builddir@
export PM2_ROOT PM2_SRCROOT PM2_OBJROOT

include $(PM2_SRCROOT)/make/libs-vars.mak

pm2_build_dir  := $(shell $(PM2_OBJROOT)/bin/pm2-config --flavor=$(FLAVOR) --builddir)

PADICO_ROOT     := $(pm2_build_dir)/
PADICO_SRCDIR   := @abs_srcdir@/externals/PadicoTM
PADICO_BUILDDIR := $(PADICO_ROOT)/build/PadicoTM
PADICO_CORE     := $(PM2_FLAVOR)

export PADICO_ROOT
export PADICO_CORE

PADICO_CORE_FILES := \
  $(PADICO_ROOT)/var/mod/$(PM2_FLAVOR).mk \
  $(PADICO_ROOT)/var/mod/$(PM2_FLAVOR).sh

# ## front-end rules
# ##

dot_h: $(PADICO_CORE_FILES)

libs:
	env PATH=$(PADICO_ROOT)/bin:$(PATH) make -C $(PADICO_ROOT)/build/PadicoTM modules

flavormaks:

link:

# ## config
# ##

$(PADICO_CORE_FILES):
	$(PADICO_ROOT)/bin/padico-mkcore $(PADICO_CORE) --pm2-flavor=$(PM2_FLAVOR)


