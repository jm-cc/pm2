prog=$1

set `cat $PM2_CONF_FILE`
for h in $*
do
 rcp $prog $h:/tmp/$LOGNAME
 rcp $PM2_CONF_FILE $h:/tmp/$LOGNAME/.pm2_conf
done
cp $prog /tmp/$LOGNAME
cp $PM2_CONF_FILE /tmp/$LOGNAME/.pm2_conf
PM2_CONF_FILE=/tmp/$LOGNAME/.pm2_conf
export PM2_CONF_FILE
/tmp/$LOGNAME/$prog

