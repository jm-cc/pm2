[build]
bool CONFIG_VERBOSE	= n

[compile]
bool CONFIG_OPT		= n
bool CONFIG_LOG		= n
bool CONFIG_TRACE	= n
bool CONFIG_PROFILE	= n

[schedulers]
bool CONFIG_SCHED_MINI_ALT	= n
bool CONFIG_SCHED_OPT		= n

[drivers]
bool CONFIG_QSNET	= n
bool CONFIG_MX		= n
bool CONFIG_GM		= n
bool CONFIG_SISCI	= n
bool CONFIG_DUMMY	= n

[protocols]
bool CONFIG_PROTO_MAD3	= n

#===================================

# -*- drivers -*-
[qsnet: CONFIG_QSNET]
string QSNET_LIBS	= elan

[mx: CONFIG_MX]
string MX_INC_PATH	= /opt/mx/include
string MX_LD_PATH	= /opt/mx/lib
string MX_LIBS		= myriexpress

[gm: CONFIG_GM]
string GM_INC_PATH	= /opt/gm/include
string GM_LD_PATH	= /opt/gm/lib
string GM_LIBS		= gm

[sisci: CONFIG_SISCI]
string SISCI_INC_PATH	= /opt/DIS/include
string SISCI_LD_PATH	= /opt/DIS/lib
string SISCI_LIBS	= sisci

[dummy: CONFIG_DUMMY]
string DUMMY_INC_PATH
string DUMMY_LD_PATH
string DUMMY_LIBS


# -*- protos -*-
[mad3_emulation: CONFIG_PROTO_MAD3]
set CONFIG_SCHED_MINI_ALT	= y

#
