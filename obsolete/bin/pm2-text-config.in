PATH="@abs_top_builddir@/bin:$PATH"
PM2_ROOT="@abs_top_srcdir@"
PM2_SRCROOT="@abs_top_srcdir@"
PM2_OBJROOT="@abs_top_builddir@"
export PATH PM2_ROOT PM2_SRCROOT PM2_OBJROOT

case `basename "$0"` in
	*text*)
		exec pm2-config-flavor --text
		;;
	*x*)
		exec pm2-config-flavor --xdialog
		;;
	*menu*)
		exec pm2-config-flavor --dialog
		;;
	*)
		echo "Oups!"
		exit 1
		;;
esac

