CC="@CC@"
CFLAGS="@NMAD_CFLAGS@"
LIBS="@NMAD_LIBS@ -lmadmpi @nmad_mpi_romio_libs@"

if [ "x${NMAD_BUILD}" != "x" ]; then
    CFLAGS="${CFLAGS} -DNMAD_BUILD"
fi

case "$1" in
    "-showme")
	shift
	echo "${CC} ${CFLAGS} ${@} ${LIBS}"
	;;
    "-showme:compile")
	echo "${CFLAGS}"
	;;
    "-showme:link")
	echo "${LIBS}"
	;;
    "-compile_info")
	echo "${CC} ${CFLAGS}"
	;;
    "-link_info")
	echo "${CC} ${LIBS}"
	;;
    *)
	compile=no
	for a in "$@"; do
	    case "x${a}" in
		x-c)
		    compile=yes
		    ;;
		x-M*)
		    compile=yes
		    ;;
	    esac
	done
	if [ ${compile} = no ]; then
	    libs="${LIBS}"
	else
	    libs=
	fi
	exec ${CC} ${CFLAGS} ${@} ${libs}
	;;
esac

