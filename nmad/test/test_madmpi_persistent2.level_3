# Configuration
hosts=${TESTCONFIG:-"localhost localhost"}
net=${TESTNET:-tcp}
mpi="mpi_emu"
strat="strat_aggreg_extended"
flavor="test_nmad_${mpi}_${net}_${strat}"
sort_output=1

appdir="${PM2_ROOT}/nmad/examples/mpi/basics"
prog="persistent2"
args="--x --p --l"
sort_output=1

rm -f /tmp/pm2test_"${USER}"_expected
nb_hosts=$(echo $hosts | wc -w)
(
for f in $(seq 1 2 $nb_hosts) ; do
    echo "Index successfully received"
done
) > /tmp/pm2test_"${USER}"_expected

. ./include/nmad_default

# Verification et compilation du lanceur leonie
compile_leonie
