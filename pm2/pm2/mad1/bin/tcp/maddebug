#!/bin/sh

# $1... = command and arguments

num=0
while test -f /tmp/maddebug.$num
do
    num=`expr $num + 1`
done
file=/tmp/maddebug.$num
prog=$1
shift

args=""
while [ $# -gt 0 ]; do
    args="$args '$1'"
    shift
done

echo "set args $args" > $file
if test -n "$MAD_MY_NUMBER"
then
    title="$prog.$MAD_MY_NUMBER"
    echo "set environment MAD_MY_NUMBER $MAD_MY_NUMBER" >> $file
    echo "set environment MAD_NUM_NODES $MAD_NUM_NODES" >> $file
    echo "set environment MAD_MY_NAME $MAD_MY_NAME" >> $file
    echo "set environment MAD_SERVER_PORT $MAD_SERVER_PORT" >> $file
    echo "set environment MAD_SERVER_HOST $MAD_SERVER_HOST" >> $file
else
    title="$prog.0"
fi
echo "set environment DISPLAY $DISPLAY" >> $file
echo "set environment MAD_DEBUG on" >> $file
echo "set environment PM2_CONF_FILE $PM2_CONF_FILE" >> $file

xterm -title $title -e gdb -x $file $prog

rm -f $file

