#!/bin/sh

_PM2CONFFILE_PROGNAME=pm2-conf-file

pm2conffile_usage() # exit_code
{
    cat <<EOF
Usage: $_PM2CONFFILE_PROGNAME { option }
  option:
    -f <name> : Use flavor "name" (default=\$PM2_FLAVOR or default)
    -h        : Display this help message
EOF
    exit $1
}

pm2conffile_parse_cmdline()
{
    while [ $# -gt 0 ]; do
	case $1 in
	    -f)
		shift; PM2_FLAVOR="$1"; shift
		;;
	    -h)
		pm2conffile_usage 0
		;;
	    --)
		shift; break
		;;
	    *)
		break
		;;
	esac
    done

    [ $# -eq 0 ] || pm2conffile_usage 1

    PM2_CONF_FILE=${PM2_HOME:-${HOME}}/.pm2/conf/${PM2_FLAVOR:-default}/.pm2conf
    export PM2_CONF_FILE
}

# Programme principal

PM2_FLAVOR=${PM2_FLAVOR:-default}
export PM2_FLAVOR

if [ "$1" = --source-mode ]; then
    shift
    pm2conffile_parse_cmdline $*
else
    pm2conffile_parse_cmdline $*
    echo $PM2_CONF_FILE
    exit 0
fi

