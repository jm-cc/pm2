GDB=""
if [ "$1" = -d ]
then
	shift
	GDB=gdb
	. $PM2_ROOT/bin/pm2-arch --source-mode
	for mod in $(pm2-config --modules)
	do
		gdbinit_arch=$PM2_ROOT/modules/$mod/scripts/gdbinit-$PM2_ARCH
		[ -r $gdbinit_arch ] && GDB="$GDB -x $gdbinit_arch"
		gdbinit=$PM2_ROOT/modules/$mod/scripts/gdbinit
		[ -r $gdbinit ] && GDB="$GDB -x $gdbinit"
	done
	GDB="$GDB --args"
fi
BUILDDIR=`${PM2_ROOT}/bin/pm2-config --builddir`
LD_LIBRARY_PATH="$LD_LIBRARY_PATH${LD_LIBRARY_PATH:+:}$BUILDDIR/lib"
LD_PRELOAD=`${PM2_ROOT}/bin/pm2-config --preload`
export LD_LIBRARY_PATH LD_PRELOAD
exec $GDB "$@"
