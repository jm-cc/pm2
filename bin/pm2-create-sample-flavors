	--marcel=numa --marcel=marcel_main \
	--marcel=smp_smt_idle --marcel=nbmaxcpus:64 \
	--marcel=enable_stats \
        --init=topology

    register_flavor marcel-topology-256 \
	--modules="marcel tbx init" $DEBUG_OPTIONS $COMMON_OPTIONS \
	--marcel=numa --marcel=marcel_main \
	--marcel=smp_smt_idle --marcel=nbmaxcpus:256 \
