# General Public License for more details.


if [ "$1" == "-h" ] || [ "$1" == "--help" ] ; then
    echo "Syntax: $0 [ --latex ] [ <host> ]"
    exit 1
fi

# Read the arguments
args=""
SSH=""
while [ "$1" ] ; do
    if [ "$1" == "--latex" ] ; then
        args="--latex"
    else
	# the application should be launched remotely
	host=$1
        SSH="ssh $1"
    fi
    shift
done

# Create the flavor if needed
flavor=$($SSH pm2-flavor get --flavor=marcel-numa 2>/dev/null)
if [ -z "$flavor" ] ; then
    $SSH pm2-create-sample-flavors marcel-numa
fi

# Compile the application
$SSH make -C $PM2_ROOT/marcel/examples FLAVOR=marcel-numa read_topology
echo
echo

# Execute the application
$SSH $($SSH pm2-which --flavor marcel-numa read_topology) --verbose $args > /tmp/topology_$$.out
cat /tmp/topology_$$.out

# If the application has been launched remotely, download the file and run latex on it
if [ -n "$SSH" ] ; then
    if [ "$args" == "--latex" ] ; then
	file=$(grep latex /tmp/topology_$$.out | awk '{print $2}')
	scp $host:$file.tex .
	latex $file
	dvips -Ppdf  -t landscape $file.dvi
	ps2pdf $file.ps
    fi
fi
