/**** peername parsing functions **************************************/

static int
bnm_verify_hostname(char *host)
{
        int             ret     = 0;
        int             len     = 0;
        const char     *legal   = NULL;

        legal = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-.";

        len = strlen(host);
        if (len > 64) {
                debug(BNM_DB_INFO, "%s is not a legal hostname", host);
        }

        ret = strspn(host, legal);

        if (len != ret || len > 63 || len == 0) {
                return -1;
        }

        return 0;
}

static int
bnm_verify_num_str(char *num_str)
{
        int             ret     = 0;
        int             len     = 0;
        const char     *legal   = "0123456789";

        len = strlen(num_str);

        ret = strspn(num_str, legal);

        if (len != ret) {
                return -1;
        }

        return 0;
}


/* parse mx://hostname:board:ep_id/filesystem/
 * or    mx://hostname:ep_id/filesystem/
 * this is pretty robust but if strtol() fails for board or ep_id, it
 * returns 0 and we do not know that it failed. 
 * This handles legal hostnames (1-63 chars) include a-zA-Z0-9 as well as . and -
 * It will accept IPv4 addresses but not IPv6 (too many semicolons) */
static int
bnm_parse_peername(const char *peername, char **hostname, uint32_t *board, uint32_t *ep_id)
{
        int             ret             = 0;
        int             colon1_found    = 0;
        int             colon2_found    = 0;
        char           *s               = NULL;
        char           *colon1          = NULL;
        char           *colon2          = NULL;
        char           *fs              = NULL;
        char           *host            = NULL;
        uint32_t        bd              = -1;
        uint32_t        ep              = 0;

        if (peername == NULL || hostname == NULL || board == NULL || ep_id == NULL) {
                debug(BNM_DB_INFO, "parse_peername() called with invalid parameter");
                return -BMI_EINVAL;
        }

        if (peername[0] != 'm' ||
            peername[1] != 'x' ||
            peername[2] != ':' ||
            peername[3] != '/' ||
            peername[4] != '/') {
                debug(BNM_DB_INFO, "parse_peername() peername does not start with mx://");
                return -1;
        }

        s = strdup(&peername[5]);
        fs = strchr(s, '/');
        if (fs) {
                *fs = '\0';
        }
        colon1 = strchr(s, ':');
        if (!colon1) {
                debug(BNM_DB_INFO, "parse_peername() strchr() failed");
        } else {
                colon2 = strrchr(s, ':');
                if (colon1 == colon2) {
                        /* colon2_found == 0 */
                        debug(BNM_DB_INFO, "parse_peername() MX hostname does not "
                                           "include a board number");
                } else {
                        colon2_found = 1;
                        *colon2 = '\0';
                }
                colon1_found = 1;
                *colon1 = '\0';
        }
        /* if MX hostname includes board number...
         * s      = hostname\0board\0ep_id\0filesystem
         * colon1 =         \0board\0ep_id\0filesystem
         * colon2 =                \0ep_id\0filesystem
         * fs     =                       \0filesystem
         *
         * else if MX hostname does _not_ include a board number...
         * s      = hostname\0ep_id\0filesystem
         * colon1 =         \0ep_id\0filesystem
         * colon2 =         \0ep_id\0filesystem
         * fs     =                \0filesystem
         */

        colon1++;
        colon2++;

        /* make sure there are no more ':' in the strings */
        if (colon1_found && colon2_found) {
                if (NULL != strchr(colon1, ':') ||
                    NULL != strchr(colon2, ':')) {
                        debug(BNM_DB_INFO, "parse_peername() too many ':' (%s %s)", 
                                           colon1, colon2);
                        free(s);
                        return -1;
                }
        }

        host = strdup(s);
        if (!host) {
                debug(BNM_DB_MEM, "parse_peername() malloc() failed");
                free(s);
                return -1;
        }

        if (colon1_found && colon2_found) {
                bd = (uint32_t) strtol(colon1, NULL, 0);
                ep = (uint32_t) strtol(colon2, NULL, 0);
        } else if (colon1_found && !colon2_found) {
                ep = (uint32_t) strtol(colon2, NULL, 0);
        } else {
                debug(BNM_DB_WARN, "%s is not a valid hostname", host);
                free(host);
                free(s);
                return -1;
        }

        ret = bnm_verify_hostname(host);
        if (ret != 0) {
                debug(BNM_DB_INFO, "%s is not a valid hostname", host);
                free(host);
                free(s);
                return -1;
        }
        ret = bnm_verify_num_str(colon1);
        if (ret != 0) {
                debug(BNM_DB_INFO, "%s is not a valid board ID", host);
                free(host);
                free(s);
                return -1;
        }
        ret = bnm_verify_num_str(colon2);
        if (ret != 0) {
                debug(BNM_DB_INFO, "%s is not a valid endpoint ID", host);
                free(host);
                free(s);
                return -1;
        }

        *hostname = host;
        *board = bd;
        *ep_id = ep;

        free(s);

        return 0;
}

/**** peer handling functions **************************************/

static void
bnm_peer_free(struct bnm_peer *peer)
{
        struct bnm_method_addr *mxmap = peer->mxp_mxmap;

        if (mxmap != NULL) {
                mxmap->mxm_peer = NULL;
        }

        if (!qlist_empty(&peer->mxp_queued_txs) ||
            !qlist_empty(&peer->mxp_queued_rxs) ||
            !qlist_empty(&peer->mxp_pending_rxs)) {
                debug(BNM_DB_ERR, "freeing peer with non-empty lists");
                exit(1);
        }
        gen_mutex_lock(&bmi_mx->bnm_peers_lock);
        if (!qlist_empty(&peer->mxp_list)) qlist_del_init(&peer->mxp_list);
        gen_mutex_unlock(&bmi_mx->bnm_peers_lock);
        BNM_FREE(peer, sizeof(*peer));
        return;
}

static void
bnm_peer_addref(struct bnm_peer *peer)
{
        gen_mutex_lock(&peer->mxp_lock);
        debug(BNM_DB_PEER, "%s refcount was %d", __func__, peer->mxp_refcount);
        peer->mxp_refcount++;
        gen_mutex_unlock(&peer->mxp_lock);
        return;
}

static void
bnm_peer_decref(struct bnm_peer *peer)
{
        BNM_ENTER;
        gen_mutex_lock(&peer->mxp_lock);
        if (peer->mxp_refcount == 0) {
                debug(BNM_DB_WARN, "peer_decref() called for %s when refcount == 0",
                                peer->mxp_mxmap->mxm_peername);
        }
        peer->mxp_refcount--;
        if (peer->mxp_refcount == 1 && peer->mxp_state == BNM_PEER_DISCONNECT) {
                /* all txs and rxs are completed or canceled, reset state */
                debug(BNM_DB_PEER, "Setting peer %s to BNM_PEER_INIT",
                                   peer->mxp_mxmap->mxm_peername);
                peer->mxp_state = BNM_PEER_INIT;
        }
        gen_mutex_unlock(&peer->mxp_lock);

        if (peer->mxp_refcount == 0) {
                debug(BNM_DB_PEER, "%s freeing peer %s", __func__,
                                peer->mxp_mxmap->mxm_peername);
                struct bnm_method_addr *mxmap = peer->mxp_mxmap;

                mx_set_endpoint_addr_context(peer->mxp_epa, NULL);
                gen_mutex_lock(&bmi_mx->bnm_lock);
                mxmap->mxm_peer = NULL;
                gen_mutex_unlock(&bmi_mx->bnm_lock);
                bnm_peer_free(peer);
        }
        BNM_EXIT;
        return;
}

static int
bnm_peer_alloc(struct bnm_peer **peerp, struct bnm_method_addr *mxmap)
{
        int              i              = 0;
        int              ret            = 0;
        char             name[MX_MAX_HOSTNAME_LEN + 1];
        uint64_t         nic_id         = 0ULL;
        mx_return_t      mxret          = MX_SUCCESS;
        struct bnm_peer *peer           = NULL;

        if (peerp == NULL) {
                debug(BNM_DB_PEER, "peer_alloc() peerp = NULL");
                return -1;
        }
        BNM_MALLOC(peer, sizeof(*peer));
        if (!peer) {
                debug(BNM_DB_MEM, "peer_alloc() unable to malloc peer");
                return -BMI_ENOMEM;
        }
        peer->mxp_map   = mxmap->mxm_map;
        peer->mxp_mxmap = mxmap;

        /* init lists before calling in case we call peer_free() */
        INIT_QLIST_HEAD(&peer->mxp_queued_txs);
        INIT_QLIST_HEAD(&peer->mxp_queued_rxs);
        INIT_QLIST_HEAD(&peer->mxp_pending_rxs);
        INIT_QLIST_HEAD(&peer->mxp_list);
        
        memset(name, 0, sizeof(*name));
        if (mxmap->mxm_board != -1) {
                sprintf(name, "%s:%d", mxmap->mxm_hostname, mxmap->mxm_board);
        } else {
                sprintf(name, "%s", mxmap->mxm_hostname);
        }
        mxret = mx_hostname_to_nic_id(name, &nic_id);
        if (mxret == MX_SUCCESS) {
                peer->mxp_nic_id = nic_id;
        } else {
                debug((BNM_DB_MX|BNM_DB_WARN), "peer_alloc() unable to lookup nic_id "
                      "for %s (mx_hostname_to_nic_id() returned %s)", name,
                      mx_strerror(mxret));
                bnm_peer_free(peer);
                return -BMI_EHOSTUNREACH;
        }
        /* peer->mxp_epa will come from mx_iconnect() */

        peer->mxp_state = BNM_PEER_INIT;
        /* peer->mxp_tx_id assigned to me by peer */
        gen_mutex_lock(&bmi_mx->bnm_lock);
        peer->mxp_rx_id = bmi_mx->bnm_next_id++;
        gen_mutex_unlock(&bmi_mx->bnm_lock);
        if (bmi_mx->bnm_next_id > BNM_MAX_PEER_ID) {
                /* FIXME we should reset to 1
                 *      check if a new ID is already used
                 *      but we have no idea when one is no longer used
                 */
                debug(BNM_DB_ERR, "peer id is rolling over. FATAL ERROR");
                exit(1);
        }

        /* peer->mxp_refcount */

        gen_mutex_init(&peer->mxp_lock);

        for (i = 0; i < BNM_PEER_RX_NUM; i++) {
                struct bnm_ctx  *rx     = NULL;

                ret = bnm_ctx_alloc(&rx, BNM_REQ_RX);
                if (ret != 0) {
                        bnm_reduce_idle_rxs(i);
                        bnm_peer_free(peer);
                        return ret;
                }
                bnm_put_idle_rx(rx);
        }

        /* on servers with server-to-server comms, we are racing 
         * between method_addr_lookup() and handle_conn_req() */

        bnm_peer_addref(peer); /* for the peers list */
        gen_mutex_lock(&bmi_mx->bnm_peers_lock);
        qlist_add_tail(&peer->mxp_list, &bmi_mx->bnm_peers);
        gen_mutex_unlock(&bmi_mx->bnm_peers_lock);

        mxmap->mxm_peer = peer;
        *peerp = peer;

        return 0;
}

static int
bnm_peer_init_state(struct bnm_peer *peer)
{
        int             ret     = 0;

        BNM_ENTER;

        gen_mutex_lock(&peer->mxp_lock);

        /* we have a ref for each pending tx and rx, don't init
         * if the refcount > 0 or pending_rxs is not empty */
        if (!qlist_empty(&peer->mxp_pending_rxs) ||
            peer->mxp_refcount != 0) {
                ret = -1;
        } else {
                /* ok to init */
                debug(BNM_DB_PEER, "Setting peer %s to BNM_PEER_INIT",
                                   peer->mxp_mxmap->mxm_peername);
                peer->mxp_state = BNM_PEER_INIT;
        }

        gen_mutex_unlock(&peer->mxp_lock);

        BNM_EXIT;

        return 0;
}

