# Just in case MAD2_ROOT is not defined
MAD2_ROOT=${MAD2_ROOT-${PM2_ROOT}/mad2}
export MAD2_ROOT

case $1 in
    /*) command=$* ;;
    *) command=`pwd`/$*
esac

set ${PM2_CONF_FILE}
chaine=""
for i in $*
do
    chaine="${chaine} `basename $i -t`"
done
bipconf $chaine
bipload -mget $command
