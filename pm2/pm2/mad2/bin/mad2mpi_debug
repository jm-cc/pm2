#!/bin/csh -f
##########

# Just in case MAD2_ROOT is not defined
MAD2_ROOT=${MAD2_ROOT-${PM2_ROOT}/mad2}
export MAD2_ROOT

# Debugger launching script
#-------------------------
# set DBG_SCRIPT = mad2_run_gdb
set DBG_SCRIPT = mad2_run_ddd

echo Calling mpirun ...
mpirun N -x DISPLAY ${DBG_SCRIPT} $*

##########
