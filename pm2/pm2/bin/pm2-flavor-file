_PM2FLAVORFILE_PROGNAME=pm2-flavor-file

pm2flavorfile_usage() # exit_code
{
    cat <<EOF
Usage: $_PM2FLAVORFILE_PROGNAME { option }
  option:
    -f <name> : Use flavor "name" (default=\$PM2_FLAVOR or default)
    -h        : Display this help message
EOF
    exit $1
}

pm2flavorfile_parse_cmdline()
{
    while [ $# -gt 0 ]; do
	case $1 in
	    -f)
		shift; PM2_FLAVOR="$1"; shift
		;;
	    -h)
		pm2flavorfile_usage 0
		;;
	    --)
		shift; break
		;;
	    *)
		break
		;;
	esac
    done

    [ $# -eq 0 ] || pm2flavorfile_usage 1

    PM2_USER_FLAVOR_DIR=${PM2_FLAVOR_DIR:-$HOME/.pm2/flavors}
    export PM2_USER_FLAVOR_DIR

    PM2_FLAVOR_FILE=$PM2_USER_FLAVOR_DIR/$PM2_FLAVOR
    export PM2_FLAVOR_FILE

    if [ "$_PM2FLAVORFILE_SOURCEMODE" != yes ]; then
	echo $PM2_FLAVOR_FILE
    fi
}

# Programme principal

PM2_FLAVOR=${PM2_FLAVOR:-default}
export PM2_FLAVOR

export _PM2FLAVORFILE_SOURCEMODE
if [ "$1" = --source-mode ]; then
    _PM2FLAVORFILE_SOURCEMODE=yes
    shift
    pm2flavorfile_parse_cmdline $*
else
    _PM2FLAVORFILE_SOURCEMODE=no
    pm2flavorfile_parse_cmdline $*
    exit 0
fi

