cd ${PM2_ROOT}; 		ln -s marcel/ARCHITECTURES ARCHITECTURES
cd ${MADELEINE_ROOT}/;	        ln -s ../marcel/ARCHITECTURES ARCHITECTURES
cd ${MADELEINE_ROOT}/bin/;	ln -s custom/madload madload
cd ${MADELEINE_ROOT}/bin/;	ln -s ../../bin/pm2_arch pm2_arch
cd ${MADELEINE_ROOT}/bin/;	ln -s ../../bin/pm2_sys pm2_sys
cd ${MADELEINE_ROOT}/bin/via/;	ln -s ../tcp/madload madload
cd ${MADELEINE_ROOT}/bin/via/;	ln -s ../tcp/madspawn madspawn
cd ${MADELEINE_ROOT}/include/;	ln -s ../../include/safe_malloc.h safe_malloc.h
cd ${MADELEINE_ROOT}/include/sys/;	ln -s ../../../include/sys/debug.h debug.h
cd ${MADELEINE_ROOT}/include/;	ln -s ../../include/timing.h timing.h
cd ${MADELEINE_ROOT}/source/;	ln -s mpi mpi-bip
cd ${MADELEINE_ROOT}/source/;	ln -s mpi mpi-lam
cd ${MADELEINE_ROOT}/source/;	ln -s mpi mpi-sgi
cd ${MADELEINE_ROOT}/source/;	ln -s mpi mpi-sp2
cd ${MADELEINE_ROOT}/source/;	ln -s ../../source/safe_malloc.c safe_malloc.c
cd ${MADELEINE_ROOT}/source/;	ln -s ../../source/timing.c timing.c
cd ${MADELEINE_ROOT}/source/via/;	ln -s via2.c netinterf.c
cd ${MAD2_ROOT}/;	ln -s ../marcel/ARCHITECTURES ARCHITECTURES
cd ${MARCEL_ROOT}/bin/;	ln -s ../../bin/pm2_arch pm2_arch
cd ${MARCEL_ROOT}/bin/;	ln -s ../../bin/pm2_sys pm2_sys
cd ${MARCEL_ROOT}/include/;	ln -s ../../include/safe_malloc.h safe_malloc.h
cd ${MARCEL_ROOT}/include/sys/;	ln -s ../../../include/sys/debug.h debug.h
cd ${MARCEL_ROOT}/include/sys/;	ln -s ../../../include/sys/isomalloc_archdep.h isomalloc_archdep.h
cd ${MARCEL_ROOT}/include/;	ln -s ../../include/timing.h timing.h
cd ${MARCEL_ROOT}/source/;	ln -s ../../source/safe_malloc.c safe_malloc.c
cd ${MARCEL_ROOT}/source/;	ln -s ../../source/timing.c timing.c
cd ${DSM_ROOT}/include/;	ln -s ../../include/timing.h timing.h
cd ${DSM_ROOT}/include/;	ln -s ../../include/safe_malloc.h safe_malloc.h
cd ${DSM_ROOT}/;		ln -s ../marcel/ARCHITECTURES ARCHITECTURES

pm2madselect 1
