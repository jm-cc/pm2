# $1 = display
# $2... = command and arguments

DISPLAY=$1
export DISPLAY
shift

num=0
while test -f /tmp/maddebug.$num
do
    num=`expr $num + 1`
done
file=/tmp/maddebug.$num
prog=$1
shift

echo "set args $*" > $file
if test -n "$MAD_MY_NUMBER"
then
    title="$prog.$MAD_MY_NUMBER"
    echo "set environment MAD_MY_NUMBER $MAD_MY_NUMBER" >> $file
    echo "set environment MAD_NUM_NODES $MAD_NUM_NODES" >> $file
else
    title="$prog.0"
fi
echo "set environment DISPLAY $DISPLAY" >> $file
echo "set environment MAD_DEBUG on" >> $file
echo "set environment PVM_EXPORT DISPLAY:MAD_DEBUG" >> $file

xterm -title $title -e gdb -x $file $prog

rm -f $file
