# Create the flavor if needed
flavor=$(pm2-flavor get --flavor=marcel-numa 2>/dev/null)
if [ -z "$flavor" ] ; then
    pm2-create-sample-flavors marcel-numa
fi

# Compile the application
make -C $PM2_ROOT/marcel/examples FLAVOR=marcel-numa read_topology
echo
echo

# Execute the application
$(pm2-which --flavor marcel-numa read_topology)




