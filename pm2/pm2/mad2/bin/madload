# Just in case MAD2_ROOT is not defined
MAD2_ROOT=${MAD2_ROOT-${PM2_ROOT}/mad2}
export MAD2_ROOT

if [ -n "${PM2_CONSOLE}" ]; then
    prog="$1 -pm2cons $PM2_CONSOLE"
    shift
else
    prog="$1"
    shift
fi

case "_${DISPLAY}" in
    _) DISPLAY=`uname -n`:0.0 ;;
    _:*) DISPLAY=`uname -n`${DISPLAY} ;;
    *) ;;
esac

# Note: PM2_CONF_FILE is inherited
host=`head -1 ${PM2_CONF_FILE}`

args=""
while [ $# -gt 0 ]; do
    args="$args '$1'"
    shift
done

if [ "${PM2_DEBUG}" = on ]; then
    prefix='pm2_gdb_load'
    args="$args -d"
else
    prefix=""
fi

PM2_RSH=${PM2_RSH:-rsh} 
${PM2_RSH} $host /bin/sh -c \"PM2_RSH=\\\"$PM2_RSH\\\"\;export PM2_RSH\;DISPLAY=$DISPLAY\;export DISPLAY\;PM2_CONF_FILE=$PM2_CONF_FILE\;export PM2_CONF_FILE\;$prefix $prog $args\"


