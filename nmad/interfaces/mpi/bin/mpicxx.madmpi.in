CXX="g++"
CFLAGS="-I@nmad_root@/include"
LIBS="@NMAD_LIBS@ -lmadmpi @nmad_mpi_romio_libs@"

if [ "x${NMAD_BUILD}" != "x" ]; then
    CFLAGS="${CFLAGS} -DNMAD_BUILD"
fi

case "$1" in
    "-showme")
	shift
	echo "${CXX} ${CFLAGS} ${@} ${LIBS}"
	;;
    "-showme:compile")
	echo "${CFLAGS}"
	;;
    "-showme:link")
	echo "${LIBS}"
	;;
    "-compile_info")
	echo "${CXX} ${CFLAGS}"
	;;
    "-link_info")
	echo "${CXX} ${LIBS}"
	;;
    *)
	exec ${CXX} ${CFLAGS} ${@} ${LIBS}
	;;
esac

