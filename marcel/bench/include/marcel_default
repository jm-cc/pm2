# args: loop variable
initialize_bench()
{
    # Creation de la flavor
    eval ${PM2_ROOT}/bin/pm2-flavor set --flavor=\"$flavor\" \
        --ext=\"\" \
        --modules=\"init marcel ntbx tbx\"\
        --marcel=\"opt marcel-main $marcel\" \
        --all=\"opt build_static static\"

    ${PM2_ROOT}/bin/pm2conf -f $flavor `echo $hosts | tr ',' ' '`
}

# args: -
run_bench()
{
    # wait for NFS to propagate the new compiled program
    sleep 10

    ${PM2_ROOT}/bin/pm2load -f $flavor $prog $args
}

# args: loop variable
finalize_bench()
{
    file_result="/tmp/pm2bench_${prog}_${USER}_result"
    if [ -d $HOME/results/marcel/raw ] ; then
        date=`date "+%Y.%m.%d"`
        revision=`svn info $PM2_ROOT |grep Revision:|awk '{print $2}'`
        mkdir -p $HOME/results/marcel/raw/${date}_rev$revision
        cp $file_result $HOME/results/marcel/raw/${date}_rev$revision/
    fi
}


