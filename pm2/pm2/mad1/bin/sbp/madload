#!/bin/sh

# Just in case MAD1_ROOT is not defined
MAD1_ROOT=${MAD1_ROOT-${PM2_ROOT}/mad1}
export MAD1_ROOT

command=$*

set $command
prog=$1

set `cat ${MAD1_ROOT}/.madconf`

rm -rf /tmp/host_sbp_pm2 /tmp/script_sbp_pm2
  
for h in $*
do
 cat >>/tmp/host_sbp_pm2 <<EOF
`basename $h -x` $h
EOF
done

cat >/tmp/script_sbp_pm2 <<EOF
# trans $prog  # A utiliser *seulement* si pas NFS...
lrun $command
EOF

pshell /tmp/host_sbp_pm2 /tmp/script_sbp_pm2





