# Configuration
flavor="test_mad3_marcel"
appdir="${PM2_ROOT}/mad3/examples"
prog="mad_random_test"
args="-w --x --p --l"
hosts=${TESTCONFIG:-"localhost localhost localhost localhost"}
net=${TESTNET:-tcp}

rm -f /tmp/pm2test_"${USER}"_expected
for i in $hosts
do
  echo "success" >> /tmp/pm2test_"${USER}"_expected
done

# Creation de la flavor
eval ${PM2_ROOT}/bin/pm2-flavor set --flavor=\"$flavor\" \
 --ext=\"\" \
 --modules=\"init mad3 ntbx tbx marcel\" \
 --init=\"opt\" \
 --mad3=\"opt ${net} marcel_poll\" \
 --ntbx=\"opt\" \
 --tbx=\"opt\" \
 --marcel=\"opt mono\" \
 --common=\"opt\" \
 --all=\"build_static\"

