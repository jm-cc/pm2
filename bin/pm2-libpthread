# Default to the `libpthread' flavor.
PM2_FLAVOR="${PM2_FLAVOR:-libpthread}"
export PM2_FLAVOR

marcel_libpthread="`pm2-config --libdir marcel`/libpthread.so"

if [ ! -f "$marcel_libpthread" ]
then
    echo "`basename $0`: error: file \`$marcel_libpthread' is missing" >&2
    echo "`basename $0`: error: possibly flavor \`$PM2_FLAVOR' lacks Marcel/libpthread support" >&2
    exit 1
fi


GDB=""
if [ "$1" = -d ]
then
	shift
	GDB=gdb
	. $PM2_ROOT/bin/pm2-arch --source-mode
	. $PM2_ROOT/bin/pm2-sys --source-mode
	for mod in $(pm2-config --modules)
	do
		gdbinit_arch_sys=$PM2_ROOT/modules/$mod/scripts/gdbinit-$PM2_ARCH-$PM2_SYS
		[ -r $gdbinit_arch_sys ] && GDB="$GDB -x $gdbinit_arch_sys"
		gdbinit_arch=$PM2_ROOT/modules/$mod/scripts/gdbinit-$PM2_ARCH
		[ -r $gdbinit_arch ] && GDB="$GDB -x $gdbinit_arch"
		gdbinit=$PM2_ROOT/modules/$mod/scripts/gdbinit
		[ -r $gdbinit ] && GDB="$GDB -x $gdbinit"
	done
	GDB="$GDB --args"
fi
BUILDDIR=`${PM2_ROOT}/bin/pm2-config --builddir`
LD_LIBRARY_PATH="$LD_LIBRARY_PATH${LD_LIBRARY_PATH:+:}$BUILDDIR/lib"
LD_PRELOAD=`${PM2_ROOT}/bin/pm2-config --preload`
export LD_LIBRARY_PATH LD_PRELOAD
exec $GDB "$@"
