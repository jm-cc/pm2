/* if (peer->mxp_state == BNM_PEER_READY)
 *     add to pending list
 *     add refcount on peer
 *     mx_irecv()
 * else
 *     add to peer's queued rxs
 */
static int
bnm_post_rx(struct bnm_ctx *rx)
{
        int             ret     = 0;
        struct bnm_peer *peer   = rx->mxc_peer;
        mx_return_t     mxret   = MX_SUCCESS;
        mx_segment_t    *segs   = NULL;

        debug((BNM_DB_FUNC|BNM_DB_CTX), "entering %s match= 0x%llx length= %lld "
                        "peer state= %d op_id= %llu", __func__, llu(rx->mxc_match), 
                        lld(rx->mxc_nob), peer->mxp_state, llu(rx->mxc_mop->op_id));
        if (peer->mxp_state == BNM_PEER_READY) {
                bnm_q_pending_ctx(rx);  /* uses peer lock */
                if (rx->mxc_nseg == 1) {
                        segs = &rx->mxc_seg;
                } else {
                        segs = rx->mxc_seg_list;
                }
                mxret = mx_irecv(bmi_mx->bnm_ep, segs, rx->mxc_nseg,
                                 rx->mxc_match, BNM_MASK_ALL, (void *) rx, &rx->mxc_mxreq);
                if (mxret != MX_SUCCESS) {
                        ret = -BMI_ENOMEM;
                        bnm_deq_pending_ctx(rx);        /* uses peer lock */
                        bnm_q_canceled_ctx(rx, BMI_ENOMEM);
                }
        } else { /* peer is not ready */
                debug(BNM_DB_PEER, "%s peer is not ready (%d) q_ctx(rx) match= 0x%llx "
                                "length=%lld", __func__, peer->mxp_state,
                                llu(rx->mxc_match), (long long) rx->mxc_nob);
                bnm_q_ctx(rx);  /* uses peer lock */
        }
        BNM_EXIT;
        return ret;
}

static int
bnm_post_recv_common(bmi_op_id_t *id, struct bmi_method_addr *remote_map,
                     int numbufs, void *const *buffers, const bmi_size_t *sizes,
                     bmi_size_t tot_expected_len, bmi_msg_tag_t tag,
                     void *user_ptr, bmi_context_id context_id,
                     PVFS_hint hints)
{
        int                      ret    = 0;
        struct bnm_ctx          *rx     = NULL;
        struct method_op        *mop    = NULL;
        struct bnm_method_addr  *mxmap  = NULL;
        struct bnm_peer         *peer   = NULL;
        PINT_event_id            eid    = 0;

        mxmap = remote_map->method_data;

        ret = bnm_ensure_connected(mxmap);
        if (ret != 0) {
                goto out;
        }
        peer = mxmap->mxm_peer;
        bnm_peer_addref(peer); /* add ref and hold until test or testcontext */

        /* get idle tx, if available, otherwise alloc one */
        rx = bnm_get_idle_rx();
        if (rx == NULL) {
                ret = bnm_ctx_alloc(&rx, BNM_REQ_RX);
                if (ret != 0) {
                        bnm_peer_decref(peer);
                        goto out;
                }
                rx->mxc_state = BNM_CTX_PREP;
        }
        rx->mxc_tag = tag;
        rx->mxc_msg_type = BNM_MSG_EXPECTED;
        rx->mxc_peer = peer;

        /* map buffer(s) */
        if (numbufs == 1) {
                rx->mxc_seg.segment_ptr = (char *) *buffers;
                rx->mxc_seg.segment_length = *sizes;
                rx->mxc_nob = *sizes;
        } else {
                int             i       = 0;
                mx_segment_t    *segs   = NULL;

                BNM_MALLOC(segs, (numbufs * sizeof(*segs)));
                if (segs == NULL) {
                        bnm_put_idle_rx(rx);
                        bnm_peer_decref(peer);
                        ret = -BMI_ENOMEM;
                        goto out;
                }
                rx->mxc_seg_list = segs;
                for (i = 0; i < numbufs; i++) {
                        segs[i].segment_ptr = (void *) buffers[i];
                        segs[i].segment_length = sizes[i];
                        rx->mxc_nob += sizes[i];
                }
        }
        rx->mxc_nseg = numbufs;

        if (rx->mxc_nob != tot_expected_len) {
                debug(BNM_DB_INFO, "user provided total length %d does not match "
                                "the buffer list total length %lld", 
                                (uint32_t) tot_expected_len, (long long) rx->mxc_nob);
        }

        BNM_MALLOC(mop, sizeof(*mop));
        if (mop == NULL) {
                bnm_put_idle_rx(rx);
                bnm_peer_decref(peer);
                ret = -BMI_ENOMEM;
                goto out;
        }
        id_gen_fast_register(&mop->op_id, mop);
        debug(BNM_DB_CTX, "RX id_gen_fast_register(%llu)", llu(mop->op_id));
        mop->addr = remote_map;  /* set of function pointers, essentially */
        mop->method_data = rx;
        mop->user_ptr = user_ptr;
        mop->context_id = context_id;
        mop->event_id = eid;
        *id = mop->op_id;
        rx->mxc_mop = mop;

        bnm_create_match(rx);

        debug(BNM_DB_CTX, "%s tag= %d length= %d op_id= %llu", __func__, 
                          tag, (int) tot_expected_len, llu(mop->op_id));

        ret = bnm_post_rx(rx);
out:
        return ret;
}

