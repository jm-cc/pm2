static void
bnm_peer_post_queued_rxs(struct bnm_peer *peer)
{
        struct bnm_ctx  *rx             = NULL;
        list_t          *queued_rxs     = &peer->mxp_queued_rxs;

        BNM_ENTER;

        gen_mutex_lock(&peer->mxp_lock);
        while (!qlist_empty(queued_rxs)) {
                if (peer->mxp_state != BNM_PEER_READY) {
                        gen_mutex_unlock(&peer->mxp_lock);
                        return;
                }
                rx = qlist_entry(queued_rxs->next, struct bnm_ctx, mxc_list);
                qlist_del_init(&rx->mxc_list);
                gen_mutex_unlock(&peer->mxp_lock);
                bnm_post_rx(rx);
                gen_mutex_lock(&peer->mxp_lock);
        }
        gen_mutex_unlock(&peer->mxp_lock);

        BNM_EXIT;

        return;
}

static void
bnm_peer_post_queued_txs(struct bnm_peer *peer)
{
        struct bnm_ctx  *tx             = NULL;
        list_t          *queued_txs     = &peer->mxp_queued_txs;

        BNM_ENTER;

        gen_mutex_lock(&peer->mxp_lock);
        while (!qlist_empty(queued_txs)) {
                if (peer->mxp_state != BNM_PEER_READY) {
                        gen_mutex_unlock(&peer->mxp_lock);
                        return;
                }
                tx = qlist_entry(queued_txs->next, struct bnm_ctx, mxc_list);
                qlist_del_init(&tx->mxc_list);
                gen_mutex_unlock(&peer->mxp_lock);
                /* we may have posted this before we got the peer's id */
                bnm_create_match(tx);
                bnm_post_tx(tx);
                gen_mutex_lock(&peer->mxp_lock);
        }
        gen_mutex_unlock(&peer->mxp_lock);

        BNM_EXIT;

        return;
}


static int
bnm_post_unexpected_recv(mx_endpoint_addr_t source, uint8_t type, uint32_t id, 
                         uint32_t tag, uint64_t match, uint32_t length)
{
        int             ret     = 0;
        struct bnm_ctx  *rx     = NULL;
        struct bnm_peer *peer   = NULL;
        void            *peerp  = (void *) &peer;
        mx_return_t     mxret   = MX_SUCCESS;

        BNM_ENTER;

        if (id == 0 && tag == 0 && type == 0) {
                bnm_parse_match(match, &type, &id, &tag);
        }

        rx = bnm_get_idle_rx();
        if (rx != NULL) {
                mx_get_endpoint_addr_context(source, &peerp);
                peer = (struct bnm_peer *) peerp;
                if (peer == NULL) {
                        debug(BNM_DB_PEER, "unknown peer sent message 0x%llx "
                                        "length %u", llu(match), length);
                }
                bnm_peer_addref(peer); /* can peer be NULL? */
                rx->mxc_peer = peer;
                rx->mxc_msg_type = type;
                rx->mxc_tag = tag;
                rx->mxc_match = match;
                rx->mxc_seg.segment_ptr = rx->mxc_buffer;
                rx->mxc_seg.segment_length = length;
                rx->mxc_nseg = 1;
                rx->mxc_nob = (long long) length;

                if (length > BNM_UNEXPECTED_SIZE) {
                        debug(BNM_DB_WARN, "receiving unexpected msg with "
                                        "%d bytes. Will receive with length 0.",
                                        length);
                        rx->mxc_seg.segment_length = 0;
                }
                debug(BNM_DB_CTX, "%s rx match= 0x%llx length= %lld", __func__,
                                llu(rx->mxc_match), lld(rx->mxc_nob));
                mxret = mx_irecv(bmi_mx->bnm_ep, &rx->mxc_seg, rx->mxc_nseg,
                                 rx->mxc_match, BNM_MASK_ALL, (void *) rx, &rx->mxc_mxreq);
                if (mxret != MX_SUCCESS) {
                        debug((BNM_DB_MX|BNM_DB_CTX), "mx_irecv() failed with %s for an "
                                        "unexpected recv with tag %d length %d",
                                        mx_strerror(mxret), tag, length);
                        bnm_put_idle_rx(rx);
                        ret = -1;
                }
        } else {
                ret = -1;
        }

        BNM_EXIT;

        return ret;
}

/* MX calls this function if an incoming msg does not match a posted recv.
 * MX blocks while in this function. Make it as fast as possible - 
 * do not allocate memory, etc.
 *
 * This function is also a nice way of finding early expected receives
 * before they are posted by PVFS/BMI.
 */
mx_unexp_handler_action_t
bnm_unexpected_recv(void *context, mx_endpoint_addr_t source,
                      uint64_t match_value, uint32_t length, void *data_if_available)
{
        int                     ret     = MX_RECV_CONTINUE;
        struct bnm_ctx          *rx     = NULL;
        uint8_t                 type    = 0;
        uint32_t                id      = 0;
        uint32_t                tag     = 0;
        struct bnm_peer         *peer   = NULL;
        void                    *peerp  = &peer;
        mx_return_t             mxret   = MX_SUCCESS;

        bnm_parse_match(match_value, &type, &id, &tag);

        switch (type) {
        case BNM_MSG_CONN_REQ:
                debug(BNM_DB_CONN, "CONN_REQ from %s", (char *) data_if_available);
                if (!bmi_mx->bnm_is_server) {
                        debug(BNM_DB_ERR, "client receiving CONN_REQ");
                        exit(1);
                }
                /* a client is trying to contact us */
                /* do not alloc peer which can block, post rx only */
                rx = bnm_get_idle_rx();
                if (rx != NULL) {
                        rx->mxc_msg_type = type;
                        rx->mxc_tag = tag; /* this is the bmi_mx version number */
                        rx->mxc_match = match_value;
                        rx->mxc_seg.segment_length = length;
                        rx->mxc_nseg = 1;
                        rx->mxc_nob = (long long) length;
                        debug(BNM_DB_CONN, "%s rx match= 0x%llx length= %lld", 
                                        __func__, llu(rx->mxc_match), lld(rx->mxc_nob));
                        mxret = mx_irecv(bmi_mx->bnm_ep, &rx->mxc_seg, rx->mxc_nseg,
                                         rx->mxc_match, BNM_MASK_ALL, (void *) rx, &rx->mxc_mxreq);
                        if (mxret != MX_SUCCESS) {
                                debug(BNM_DB_CONN, "mx_irecv() failed for an "
                                                "unexpected recv with %s", 
                                                mx_strerror(mxret));
                                bnm_put_idle_rx(rx);
                                ret = MX_RECV_FINISHED;
                        }
                } else {
                        ret = MX_RECV_FINISHED;
                }
                break;
        case BNM_MSG_CONN_ACK:
                /* the server is replying to our CONN_REQ */
                mx_get_endpoint_addr_context(source, &peerp);
                peer = (struct bnm_peer *) peerp;
                if (peer == NULL) {
                        debug((BNM_DB_CONN|BNM_DB_PEER), "receiving CONN_ACK but "
                                        "the endpoint context does not have a peer");
                } else {
                        debug(BNM_DB_CONN, "CONN_ACK from %s id= %d", 
                                        peer->mxp_mxmap->mxm_peername, id);
                        if (tag == BNM_VERSION) {
                                debug(BNM_DB_CONN, "setting %s's state to READY", 
                                                 peer->mxp_mxmap->mxm_peername);
                                gen_mutex_lock(&peer->mxp_lock);
                                peer->mxp_tx_id = id;
                                peer->mxp_state = BNM_PEER_READY;
                                gen_mutex_unlock(&peer->mxp_lock);
                                bnm_peer_post_queued_rxs(peer);
                                bnm_peer_post_queued_txs(peer);
                        } else {
                                bnm_peer_disconnect(peer, 1, BMI_EPROTO);
                        }
                }
                /* we are done with the recv, drop it */
                ret = MX_RECV_FINISHED;
                break;
        case BNM_MSG_UNEXPECTED:
                if (!bmi_mx->bnm_is_server) {
                        void *peerp = &peer;
                        mx_get_endpoint_addr_context(source, &peerp);
                        peer = (struct bnm_peer *) peerp;
                        debug(BNM_DB_ERR, "client receiving unexpected message "
                                "from %s with mask 0x%llx length %u",
                                peer == NULL ? "unknown" : peer->mxp_mxmap->mxm_peername,
                                llu(match_value), length);
                        exit(1);
                }
                ret = bnm_post_unexpected_recv(source, type, id, tag, match_value, length);
                if (ret != 0) {
                        /* we will catch this later in testunexpected() */
                        debug(BNM_DB_CTX, "Missed unexpected receive");
                }
                ret = MX_RECV_CONTINUE;
                break;
        case BNM_MSG_EXPECTED:
                /* do nothing, BMI will post a recv for it */
                debug(BNM_DB_CTX, "Early expected message  length %u  tag %u  match "
                                "0x%llx", length, tag, llu(match_value));
                break;
        default:
                debug(BNM_DB_ERR, "received unexpected msg with type %d", type);
                exit(1);
                break;
        }

        return ret;
}

/* This is called before BMI_mx_initialize() on servers, do not use anything from bnm_data */
static struct bmi_method_addr *
bnm_alloc_method_addr(const char *peername, const char *hostname, uint32_t board, uint32_t ep_id)
{
        struct bmi_method_addr      *map            = NULL;
        struct bnm_method_addr  *mxmap          = NULL;

        BNM_ENTER;

        if (bmi_mx == NULL) {
                map = bmi_alloc_method_addr(
                    tmp_id, (bmi_size_t) sizeof(*mxmap));
        } else {
                map = bmi_alloc_method_addr(bmi_mx->bnm_method_id, (bmi_size_t) sizeof(*mxmap));
        }
        if (map == NULL) return NULL;

        mxmap = map->method_data;
        mxmap->mxm_map = map;
        mxmap->mxm_peername = strdup(peername);
        mxmap->mxm_hostname = strdup(hostname);
        mxmap->mxm_board = board;
        mxmap->mxm_ep_id = ep_id;
        /* mxmap->mxm_peer */

        BNM_EXIT;

        return map;
}


/* test for ICON_REQ messages (on the client)
 * if found
 *    get idle tx
 *    marshall CONN_REQ
 *    set peer state to WAIT
 *    send CONN_REQ
 */
static void
bnm_handle_icon_req(void)
{
        uint32_t        result  = 0;

        do {
                uint64_t        match   = (uint64_t) BNM_MSG_ICON_REQ << BNM_MSG_SHIFT;
                uint64_t        mask    = BNM_MASK_MSG;
                mx_status_t     status;

                mx_test_any(bmi_mx->bnm_ep, match, mask, &status, &result);
                if (result) {
                        int                     length  = 0;
                        struct bnm_ctx          *tx     = NULL;
                        struct bnm_peer         *peer   = NULL;
                        struct bnm_method_addr  *mxmap  = NULL;

                        peer = (struct bnm_peer *) status.context;
                        mxmap = peer->mxp_mxmap;
                        debug(BNM_DB_CONN, "%s returned for %s with %s", __func__, 
                                        mxmap->mxm_peername, mx_strstatus(status.code));

                        if (status.code != MX_STATUS_SUCCESS) {
                                debug((BNM_DB_CONN|BNM_DB_PEER),
                                      "%s: connect to %s failed with %s", __func__,
                                      mxmap->mxm_peername, mx_strstatus(status.code));
                                bnm_peer_disconnect(peer, 0, bnm_mx_to_bmi_errno(status.code));
                                /* drop ref taken before calling mx_iconnect */
                                bnm_peer_decref(peer);
                                continue;
                        }

                        gen_mutex_lock(&peer->mxp_lock);
                        peer->mxp_epa = status.source;
                        gen_mutex_unlock(&peer->mxp_lock);
                        mx_set_endpoint_addr_context(peer->mxp_epa, (void *) peer);

                        tx = bnm_get_idle_tx();
                        if (tx == NULL) {
                                int     ret     = 0;
                                ret = bnm_ctx_alloc(&tx, BNM_REQ_TX);
                                if (ret != 0) {
                                        bnm_peer_disconnect(peer, 1, BMI_ENOMEM);
                                        /* drop ref taken before calling mx_iconnect */
                                        bnm_peer_decref(peer);
                                        continue;
                                }
                                tx->mxc_state = BNM_CTX_PREP;
                        }
                        tx->mxc_msg_type = BNM_MSG_CONN_REQ;
                        /* tx->mxc_mop unused */
                        tx->mxc_peer = peer;
                        tx->mxc_tag = BNM_VERSION;
                        bnm_create_match(tx);
                        length = strlen(bmi_mx->bnm_peername) + 1; /* pad for '\0' */
                        BNM_MALLOC(tx->mxc_buffer, length);
                        if (tx->mxc_buffer == NULL) {
                                bnm_peer_disconnect(peer, 1, BMI_ENOMEM);
                                /* drop ref taken before calling mx_iconnect */
                                bnm_peer_decref(peer);
                                continue;
                        }
                        snprintf(tx->mxc_buffer, length, "%s", bmi_mx->bnm_peername);
                        tx->mxc_seg.segment_ptr = tx->mxc_buffer;
                        tx->mxc_seg.segment_length = length;
                        tx->mxc_nseg = 1;
                        tx->mxc_state = BNM_CTX_PENDING;
                        debug(BNM_DB_CONN, "%s tx match= 0x%llx length= %lld", __func__,
                                        llu(tx->mxc_match), lld(tx->mxc_nob));
                        mx_isend(bmi_mx->bnm_ep, &tx->mxc_seg, tx->mxc_nseg, peer->mxp_epa,
                                 tx->mxc_match, (void *) tx, &tx->mxc_mxreq);
                }
        } while (result);

        return;
}

/* test for received CONN_REQ messages (on the server)
 * if found
 *    create peer
 *    create mxmap
 *    mx_iconnect() w/BNM_MSG_ICON_ACK
 */
static void
bnm_handle_conn_req(void)
{
        uint32_t        result  = 0;
        uint64_t        match   = (uint64_t) BNM_MSG_CONN_REQ << BNM_MSG_SHIFT;
        uint64_t        mask    = BNM_MASK_MSG;
        uint64_t        ack     = (uint64_t) BNM_MSG_ICON_ACK << BNM_MSG_SHIFT;
        mx_status_t     status;

        do {
                mx_test_any(bmi_mx->bnm_ep, match, mask, &status, &result);
                if (result) {
                        uint8_t                 type    = 0;
                        uint32_t                id      = 0;
                        uint32_t                sid     = 0;
                        uint32_t                version = 0;
                        uint64_t                nic_id  = 0ULL;
                        uint32_t                ep_id   = 0;
                        mx_request_t            request;
                        struct bnm_ctx          *rx     = NULL;
                        struct bnm_peer         *peer   = NULL;
                        struct bnm_method_addr  *mxmap  = NULL;

                        rx = (struct bnm_ctx *) status.context;
                        debug(BNM_DB_CONN, "%s returned %s match 0x%llx with %s", __func__, 
                                        rx->mxc_type == BNM_REQ_TX ? "TX" : "RX",
                                        llu(rx->mxc_match), mx_strstatus(status.code));
                        if (rx->mxc_type == BNM_REQ_TX) {
                                /* ignore the client's completion of the CONN_REQ send */
                                struct bnm_ctx *tx = rx;
                                debug(BNM_DB_CONN, "CONN_REQ sent to %s",
                                                tx->mxc_peer->mxp_mxmap->mxm_peername);
                                /* drop ref taken before mx_iconnect() */
                                bnm_peer_decref(tx->mxc_peer);
                                bnm_put_idle_tx(tx);
                                continue;
                        } else if (status.code != MX_STATUS_SUCCESS) {
                                bnm_peer_decref(rx->mxc_peer);
                                bnm_put_idle_rx(rx);
                                continue;
                        }
                        bnm_parse_match(rx->mxc_match, &type, &id, &version);
                        if (version != BNM_VERSION) {
                                /* TODO send error conn_ack */
                                debug(BNM_DB_WARN, "version mismatch with peer "
                                                "%s (our version 0x%x, peer's version "
                                                "0x%x)", (char *) rx->mxc_buffer, 
                                                BNM_VERSION, version);
                                bnm_peer_decref(rx->mxc_peer);
                                bnm_put_idle_rx(rx);
                                continue;
                        }
                        if (bmi_mx->bnm_is_server == 0) {
                                debug(BNM_DB_WARN, "received CONN_REQ on a client.");
                                bnm_peer_decref(rx->mxc_peer);
                                bnm_put_idle_rx(rx);
                                continue;
                        }
                        mx_decompose_endpoint_addr2(status.source, &nic_id,
                                                    &ep_id, &sid);
                        {
                                void *peerp = &peer;
                                mx_get_endpoint_addr_context(status.source, &peerp);
                                peer = (struct bnm_peer *) peerp;
                        }
                        if (peer == NULL) { /* new peer */
                                int             ret             = 0;
                                char           *host            = NULL;
                                uint32_t        board           = 0;
                                uint32_t        ep_id           = 0;
                                const char     *peername        = rx->mxc_buffer;
                                struct bmi_method_addr *map         = NULL;

                                debug((BNM_DB_CONN|BNM_DB_PEER), "%s peer %s connecting",
                                                __func__, peername);

                                ret = bnm_parse_peername(peername, &host,
                                                         &board, &ep_id);
                                if (ret != 0) {
                                        debug(BNM_DB_CONN, "parse_peername() "
                                                        "failed on %s",
                                                        (char *) rx->mxc_buffer);
                                        bnm_peer_decref(rx->mxc_peer);
                                        bnm_put_idle_rx(rx);
                                        continue;
                                }
                                map = bnm_alloc_method_addr(peername, host,
                                                            board, ep_id);
                                if (map == NULL) {
                                        debug((BNM_DB_CONN|BNM_DB_MEM), "unable to alloc a "
                                                        "method addr for %s", peername);
                                        bnm_peer_decref(rx->mxc_peer);
                                        bnm_put_idle_rx(rx);
                                        continue;
                                }
                                free(host);
                                mxmap = map->method_data;
                                ret = bnm_peer_alloc(&peer, mxmap);
                                if (ret != 0) {
                                        debug((BNM_DB_CONN|BNM_DB_MEM), "unable to alloc a "
                                                        "peer for %s", peername);
                                        bnm_peer_decref(rx->mxc_peer);
                                        bnm_put_idle_rx(rx);
                                        continue;
                                }
                        } else if (sid != peer->mxp_sid) { /* reconnecting peer */
                                /* cancel queued txs and rxs, pending rxs */
                                debug((BNM_DB_CONN|BNM_DB_PEER), "%s peer "
                                      "%s reconnecting", __func__, 
                                      peer->mxp_mxmap->mxm_peername);
                                if (peer->mxp_state == BNM_PEER_READY)
                                        bnm_peer_disconnect(peer, 0, BMI_ENETRESET);
                                mxmap = peer->mxp_mxmap;
                        } else {
                                debug((BNM_DB_CONN|BNM_DB_PEER), "%s peer "
                                      "%s reconnecting with same sid", __func__, 
                                      peer->mxp_mxmap->mxm_peername);
                                mxmap = peer->mxp_mxmap;
                        }
                        gen_mutex_lock(&peer->mxp_lock);
                        debug(BNM_DB_PEER, "Setting peer %s to BNM_PEER_WAIT",
                                           peer->mxp_mxmap->mxm_peername);
                        peer->mxp_state = BNM_PEER_WAIT;
                        peer->mxp_tx_id = id;
                        peer->mxp_sid = sid;
                        gen_mutex_unlock(&peer->mxp_lock);
                        bnm_peer_addref(peer); /* add ref until completion of CONN_ACK */
                        mx_iconnect(bmi_mx->bnm_ep, peer->mxp_nic_id, mxmap->mxm_ep_id,
                                    BNM_MAGIC, ack, peer, &request);
                        bnm_put_idle_rx(rx);
                }
        } while (result);

        return;
}

/* test for ICON_ACK messages (on the server)
 * if found
 *    register mxmap
 *    get idle tx
 *    marshall CONN_ACK
 *    set peer state to READY
 *    send CONN_ACK
 */
static void
bnm_handle_icon_ack(void)
{
        uint32_t        result  = 0;
        struct bnm_ctx  *tx     = NULL;
        struct bnm_peer *peer   = NULL;

        if (!bmi_mx->bnm_is_server) return;
        do {
                uint64_t        match   = (uint64_t) BNM_MSG_ICON_ACK << BNM_MSG_SHIFT;
                uint64_t        mask    = BNM_MASK_MSG;
                mx_status_t     status;

                mx_test_any(bmi_mx->bnm_ep, match, mask, &status, &result);
                if (result) {

                        peer = (struct bnm_peer *) status.context;
                        debug(BNM_DB_CONN, "%s returned for %s with %s", __func__, 
                                        peer->mxp_mxmap->mxm_peername, 
                                        mx_strstatus(status.code));
                        if (status.code != MX_STATUS_SUCCESS) {
                                debug((BNM_DB_CONN|BNM_DB_PEER|BNM_DB_WARN),
                                      "%s: connect to %s failed with %s", __func__,
                                      peer->mxp_mxmap->mxm_peername, 
                                      mx_strstatus(status.code));
                                bnm_peer_disconnect(peer, 1, bnm_mx_to_bmi_errno(status.code));
                                /* drop ref taken before calling mx_iconnect */
                                bnm_peer_decref(peer);
                                continue;
                        }
                        gen_mutex_lock(&peer->mxp_lock);
                        peer->mxp_epa = status.source;
                        debug(BNM_DB_PEER, "Setting peer %s to BNM_PEER_READY",
                                           peer->mxp_mxmap->mxm_peername);
                        peer->mxp_state = BNM_PEER_READY;
                        /* NOTE no need to call bnm_peer_post_queued_[rxs|txs]()
                         * since the server should not have any queued msgs */
                        gen_mutex_unlock(&peer->mxp_lock);
                        mx_set_endpoint_addr_context(peer->mxp_epa, (void *) peer);

                        tx = bnm_get_idle_tx();
                        if (tx == NULL) {
                                int     ret     = 0;
                                ret = bnm_ctx_alloc(&tx, BNM_REQ_TX);
                                if (ret != 0) {
                                        debug((BNM_DB_CONN|BNM_DB_MEM), "unable to alloc a "
                                                        "ctx to send a CONN_ACK to %s", 
                                                        peer->mxp_mxmap->mxm_peername);
                                        bnm_peer_disconnect(peer, 1, BMI_ENOMEM);
                                        /* drop ref taken before calling mx_iconnect */
                                        bnm_peer_decref(peer);
                                        continue;
                                }
                                tx->mxc_state = BNM_CTX_PREP;
                        }
                        tx->mxc_msg_type = BNM_MSG_CONN_ACK;
                        /* tx->mxc_mop unused */
                        tx->mxc_peer = peer;
                        tx->mxc_tag = BNM_VERSION;
                        bnm_create_match(tx);
                        tx->mxc_seg.segment_length = 0;
                        tx->mxc_nseg = 1;
                        debug(BNM_DB_CONN, "%s tx match= 0x%llx length= %lld", __func__,
                                        llu(tx->mxc_match), lld(tx->mxc_nob));
                        mx_isend(bmi_mx->bnm_ep, &tx->mxc_seg, tx->mxc_nseg, peer->mxp_epa,
                                 tx->mxc_match, (void *) tx, &tx->mxc_mxreq);
                        if (!peer->mxp_exist) {
                                debug(BNM_DB_PEER, "calling bmi_method_addr_reg_callback"
                                      "on %s", peer->mxp_mxmap->mxm_peername);
                                bmi_method_addr_reg_callback(peer->mxp_map);
                                peer->mxp_exist = 1;
                        }
                }
        } while (result);

        return;
}

/* test for CONN_ACK messages (on the server)
 * Since the unexpected_recv() function drops the CONN_ACK on the client
 * side, we only need this on the server to get the completion and 
 * put the tx on the idle list. */
static void
bnm_handle_conn_ack(void)
{
        uint32_t        result  = 0;
        struct bnm_ctx  *tx     = NULL;

        if (!bmi_mx->bnm_is_server) goto out;
        do {
                uint64_t        match   = (uint64_t) BNM_MSG_CONN_ACK << BNM_MSG_SHIFT;
                uint64_t        mask    = BNM_MASK_MSG;
                mx_status_t     status;

                mx_test_any(bmi_mx->bnm_ep, match, mask, &status, &result);
                if (result) {
                        tx = (struct bnm_ctx *) status.context;
                        debug(BNM_DB_CONN, "%s returned tx match 0x%llx with %s", __func__, 
                                        llu(tx->mxc_match), mx_strstatus(status.code));
                        bnm_peer_decref(tx->mxc_peer);
                        bnm_put_idle_tx(tx);
                }
        } while (result);

out:
        return;
}

static void
bnm_connection_handlers(void)
{
        static int      count   = 0;
        int             print   = (count++ % 1000 == 0);

        if (print)
                BNM_ENTER;

        /* push connection messages along */
        bnm_handle_icon_req();
        bnm_handle_conn_req();
        bnm_handle_icon_ack();
        bnm_handle_conn_ack();
        if (print)
                BNM_EXIT;
        return;
}

static int
BMI_mx_test(bmi_op_id_t id, int *outcount, bmi_error_code_t *err,
            bmi_size_t *size, void **user_ptr, int max_idle_time __unused,
            bmi_context_id context_id __unused)
{
        uint32_t         result = 0;
        struct method_op *mop   = NULL;
        struct bnm_ctx   *ctx   = NULL;
        struct bnm_peer  *peer  = NULL;

        BNM_ENTER;

        bnm_connection_handlers();

        mop = id_gen_fast_lookup(id);
        ctx = mop->method_data;
        peer = ctx->mxc_peer;

        switch (ctx->mxc_state) {
        case BNM_CTX_CANCELED:
                /* we are racing with testcontext */
                gen_mutex_lock(&bmi_mx->bnm_canceled_lock);
                if (ctx->mxc_state != BNM_CTX_CANCELED) {
                        gen_mutex_unlock(&bmi_mx->bnm_canceled_lock);
                        return 0;
                }
                qlist_del_init(&ctx->mxc_list);
                gen_mutex_unlock(&bmi_mx->bnm_canceled_lock);
                *outcount = 1;
                *err = ctx->mxc_mxstat.code;
                if (ctx->mxc_mop) {
                        if (user_ptr) {
                                *user_ptr = ctx->mxc_mop->user_ptr;
                        }
                        id_gen_fast_unregister(ctx->mxc_mop->op_id);
                        BNM_FREE(ctx->mxc_mop, sizeof(*ctx->mxc_mop));
                }
                bnm_peer_decref(peer);
                if (ctx->mxc_type == BNM_REQ_TX) {
                        bnm_put_idle_tx(ctx);
                } else {
                        bnm_put_idle_rx(ctx);
                }
                break;
        case BNM_CTX_PENDING:
                /* racing with mx_test_any() in textcontext? */
                mx_test(bmi_mx->bnm_ep, &ctx->mxc_mxreq, &ctx->mxc_mxstat, &result);
                if (result) {
                        PINT_EVENT_END(
                            (ctx->mxc_type == BNM_REQ_TX ?
                             bmi_mx_send_event_id : bmi_mx_recv_event_id),
                            bmi_mx_pid, NULL, ctx->mxc_mop->event_id,
                            ctx->mxc_mop->op_id, *size);

                        *outcount = 1;
                        if (ctx->mxc_mxstat.code == MX_STATUS_SUCCESS) {
                                *err = 0;
                                *size = ctx->mxc_mxstat.xfer_length;
                        } else {
                                *err = bnm_mx_to_bmi_errno(ctx->mxc_mxstat.code);
                        }
                        if (ctx->mxc_mop) {
                                if (user_ptr) {
                                        *user_ptr = ctx->mxc_mop->user_ptr;
                                }
                                id_gen_fast_unregister(ctx->mxc_mop->op_id);
                                BNM_FREE(ctx->mxc_mop, sizeof(*ctx->mxc_mop));
                        }
                        bnm_deq_pending_ctx(ctx);
                        if (ctx->mxc_type == BNM_REQ_TX) {
                                bnm_put_idle_tx(ctx);
                        } else {
                                bnm_put_idle_rx(ctx);
                        }
                        bnm_peer_decref(peer);
                }
                break;
        default:
                debug(BNM_DB_CTX, "%s called on %s with state %d", __func__,
                        ctx->mxc_type == BNM_REQ_TX ? "TX" : "RX", ctx->mxc_state);
        }
        BNM_EXIT;

        return 0;
}


static int
BMI_mx_testcontext(int incount, bmi_op_id_t *outids, int *outcount,
            bmi_error_code_t *errs, bmi_size_t *sizes, void **user_ptrs,
            int max_idle_time, bmi_context_id context_id)
{
        int             i               = 0;
        int             completed       = 0;
        int             old             = 0;
        uint64_t        match           = 0ULL;
        uint64_t        mask            = BNM_MASK_MSG;
        struct bnm_ctx  *ctx            = NULL;
        struct bnm_peer *peer           = NULL;
        list_t          *canceled       = &bmi_mx->bnm_canceled;
        int             wait            = 0;
        static int      count           = 0;
        int             print           = 0;

        if (count++ % 1000 == 0) {
                BNM_ENTER;
                print = 1;
        }

        bnm_connection_handlers();

        /* always return canceled messages first */
        while (completed < incount && !qlist_empty(canceled)) {
                gen_mutex_lock(&bmi_mx->bnm_canceled_lock);
                ctx = qlist_entry(canceled->next, struct bnm_ctx, mxc_list);
                qlist_del_init(&ctx->mxc_list);
                /* change state in case test is trying to reap it as well */
                ctx->mxc_state = BNM_CTX_COMPLETED;
                gen_mutex_unlock(&bmi_mx->bnm_canceled_lock);
                peer = ctx->mxc_peer;
                outids[completed] = ctx->mxc_mop->op_id;
                errs[completed] = ctx->mxc_mxstat.code;
                if (user_ptrs)
                        user_ptrs[completed] = ctx->mxc_mop->user_ptr;
                id_gen_fast_unregister(ctx->mxc_mop->op_id);
                BNM_FREE(ctx->mxc_mop, sizeof(*ctx->mxc_mop));
                completed++;
                if (ctx->mxc_type == BNM_REQ_TX) {
                        bnm_put_idle_tx(ctx);
                } else {
                        bnm_put_idle_rx(ctx);
                }
                bnm_peer_decref(peer); /* drop the ref taken in [send|recv]_common */
                if (completed > 0) {
                        debug(BNM_DB_CTX, "%s found %d canceled messages",
                              __func__, completed);
                }
        }

        /* return completed messages
         * we will always try (incount - completed) times even
         *     if some iterations have no result */

        match = (uint64_t) BNM_MSG_EXPECTED << BNM_MSG_SHIFT;
        for (i = completed; i < incount; i++) {
                uint32_t        result  = 0;
                mx_status_t     status;

                old = completed;

                if (wait == 0 || wait == 2) {
                        mx_test_any(bmi_mx->bnm_ep, match, mask, &status, &result);
                        if (!result && wait == 0 && max_idle_time > 0) wait = 1;
                } else { /* wait == 1 */
                        mx_wait_any(bmi_mx->bnm_ep, max_idle_time, match, mask, 
                                    &status, &result);
                        wait = 2;
                }
                if (result) {
                        ctx = (struct bnm_ctx *) status.context;
                        bnm_deq_pending_ctx(ctx);
                        peer = ctx->mxc_peer;
                        debug(BNM_DB_CTX, "%s completing expected %s with match 0x%llx "
                                        "for %s with op_id %llu length %d %s", __func__, 
                                        ctx->mxc_type == BNM_REQ_TX ? "TX" : "RX",
                                        llu(ctx->mxc_match), peer->mxp_mxmap->mxm_peername,
                                        llu(ctx->mxc_mop->op_id), status.xfer_length,
                                        mx_strstatus(status.code));

                        outids[completed] = ctx->mxc_mop->op_id;
                        if (status.code == MX_SUCCESS) {
                                errs[completed] = 0;
                                sizes[completed] = status.xfer_length;
                        } else {
                                errs[completed] = bnm_mx_to_bmi_errno(status.code);
                        }
                        if (user_ptrs)
                                user_ptrs[completed] = ctx->mxc_mop->user_ptr;

                        PINT_EVENT_END(
                            (ctx->mxc_type == BNM_REQ_TX ?
                             bmi_mx_send_event_id : bmi_mx_recv_event_id),
                            bmi_mx_pid, NULL, ctx->mxc_mop->event_id,
                            ctx->mxc_mop->op_id, status.xfer_length);

                        id_gen_fast_unregister(ctx->mxc_mop->op_id);
                        BNM_FREE(ctx->mxc_mop, sizeof(*ctx->mxc_mop));
                        completed++;

                        if (ctx->mxc_type == BNM_REQ_TX) {
                                bnm_put_idle_tx(ctx);
                        } else {
                                bnm_put_idle_rx(ctx);
                        }
                        bnm_peer_decref(peer); /* drop the ref taken in [send|recv]_common */
                }
                if (completed - old > 0) {
                        debug(BNM_DB_CTX, "%s found %d expected messages",
                              __func__, completed - old);
                }
        }

        /* check for completed unexpected sends */

        match = (uint64_t) BNM_MSG_UNEXPECTED << BNM_MSG_SHIFT;

        old = completed;

        for (i = completed; i < incount; i++) {
                uint32_t        result          = 0;
                mx_status_t     status;
                list_t          *unex_txs       = &bmi_mx->bnm_unex_txs;
                int             again           = 1;

                ctx = NULL;

                gen_mutex_lock(&bmi_mx->bnm_unex_txs_lock);
                if (!qlist_empty(unex_txs)) {
                        ctx = qlist_entry(unex_txs->next, struct bnm_ctx, mxc_list);
                        peer = ctx->mxc_peer;
                        qlist_del_init(&ctx->mxc_list);
                        result = 1;
                }
                gen_mutex_unlock(&bmi_mx->bnm_unex_txs_lock);

                while (!ctx && again) {
                        again = 0;
                        mx_test_any(bmi_mx->bnm_ep, match, mask, &status, &result);
                        if (result) {
                                ctx = (struct bnm_ctx *) status.context;
                                bnm_deq_pending_ctx(ctx);
                                peer = ctx->mxc_peer;
                                if (ctx->mxc_type == BNM_REQ_RX) {
                                        /* queue until testunexpected is called */
                                        bnm_q_unex_ctx(ctx);
                                        result = 0;
                                        again = 1;
                                        ctx = NULL;
                                }
                        }
                }
                if (result) {
                        debug(BNM_DB_CTX, "%s completing unexpected %s with "
                                        "match 0x%llx for %s with op_id %llu", 
                                        __func__, 
                                        ctx->mxc_type == BNM_REQ_TX ? "TX" : "RX",
                                        llu(ctx->mxc_match), 
                                        peer->mxp_mxmap->mxm_peername,
                                        llu(ctx->mxc_mop->op_id));

                        outids[completed] = ctx->mxc_mop->op_id;
                        if (status.code == MX_SUCCESS) {
                                errs[completed] = 0;
                                sizes[completed] = status.xfer_length;
                        } else {
                                errs[completed] = bnm_mx_to_bmi_errno(status.code);
                                debug(BNM_DB_CTX, "%s unexpected send completed with "
                                      "error %s", __func__, mx_strstatus(status.code));
                                bnm_peer_disconnect(peer, 0, BMI_ENETRESET);
                        }
                        if (user_ptrs)
                                user_ptrs[completed] = ctx->mxc_mop->user_ptr;
                        PINT_EVENT_END(
                            (ctx->mxc_type == BNM_REQ_TX ?
                             bmi_mx_send_event_id : bmi_mx_recv_event_id),
                            bmi_mx_pid, NULL, ctx->mxc_mop->event_id,
                            ctx->mxc_mop->op_id, status.xfer_length);

                        id_gen_fast_unregister(ctx->mxc_mop->op_id);
                        BNM_FREE(ctx->mxc_mop, sizeof(*ctx->mxc_mop));
                        completed++;

                        bnm_put_idle_tx(ctx);
                        bnm_peer_decref(peer); /* drop the ref taken in [send|recv]_common */
                }
        }
        if (completed - old > 0) {
                debug(BNM_DB_CTX, "%s found %d unexpected tx messages", 
              __func__, completed - old);
        }

        if (print)
                BNM_EXIT;

        *outcount = completed;
        return completed;
}

/* test for unexpected receives only, not unex sends */
static int
BMI_mx_testunexpected(int incount __unused, int *outcount,
            struct bmi_method_unexpected_info *ui, int max_idle_time __unused)
{
        uint32_t        result          = 0;
        uint64_t        match           = ((uint64_t) BNM_MSG_UNEXPECTED << BNM_MSG_SHIFT);
        uint64_t        mask            = BNM_MASK_MSG;
        mx_status_t     status;
        static int      count           = 0;
        int             print           = 0;
        struct bnm_ctx  *rx             = NULL;
        struct bnm_peer *peer           = NULL;
        list_t          *unex_rxs       = &bmi_mx->bnm_unex_rxs;
        int             again           = 1;

        if (count++ % 1000 == 0) {
                BNM_ENTER;
                print = 1;
        }

        bnm_connection_handlers();

        /* if the unexpected handler cannot get a rx, it does not post a receive.
         * probe for unexpected and post a rx. */
        mx_iprobe(bmi_mx->bnm_ep, match, mask, &status, &result);
        if (result) {
                int     ret     = 0;
                ret = bnm_post_unexpected_recv(status.source, 0, 0, 0, status.match_info, status.xfer_length);
                if (ret != 0) {
                        debug(BNM_DB_CTX, "%s mx_iprobe() found rx with match 0x%llx "
                                        "length %d but could not receive it", __func__,
                                        llu(status.match_info), status.xfer_length);
                }
        }

        /* check for unexpected receives */
        *outcount = 0;

        gen_mutex_lock(&bmi_mx->bnm_unex_rxs_lock);
        if (!qlist_empty(unex_rxs)) {
                rx = qlist_entry(unex_rxs->next, struct bnm_ctx, mxc_list);
                peer = rx->mxc_peer;
                qlist_del_init(&rx->mxc_list);
                result = 1;
        }
        gen_mutex_unlock(&bmi_mx->bnm_unex_rxs_lock);

        while (!rx && again) {
                again = 0;
                mx_test_any(bmi_mx->bnm_ep, match, mask, &status, &result);
                if (result) {
                        rx   = (struct bnm_ctx *) status.context;
                        bnm_deq_pending_ctx(rx);
                        peer = rx->mxc_peer;
                        if (rx->mxc_type == BNM_REQ_TX) {
                                bnm_q_unex_ctx(rx);
                                result = 0;
                                again = 1;
                                rx = NULL;
                        }
                }
        }

        if (result) {
                debug(BNM_DB_CTX, "%s completing RX with match 0x%llx for %s",
                      __func__, llu(rx->mxc_match), peer->mxp_mxmap->mxm_peername);

                ui->error_code = 0;
                ui->addr = peer->mxp_map;
                ui->size = rx->mxc_nob;
                /* avoid a memcpy by giving the rx buffer to BMI
                 * and malloc a new one for the rx */
                ui->buffer = rx->mxc_buffer;
                rx->mxc_buffer = bnm_memalloc(BNM_UNEXPECTED_SIZE, BNM_UNEX_BUF);
                rx->mxc_seg.segment_ptr = rx->mxc_buffer;
                ui->tag = rx->mxc_tag;

                bnm_put_idle_rx(rx);
                bnm_peer_decref(peer); /* drop the ref taken in unexpected_recv() */
                *outcount = 1;
        }
        if (print)
                BNM_EXIT;

        return 0;
}

static void
bnm_create_peername(void)
{
        char    peername[MX_MAX_HOSTNAME_LEN + 28]; /* mx://host:board:ep_id\0 */

        if (bmi_mx->bnm_board != -1) {
                /* mx://host:board:ep_id\0 */
                sprintf(peername, "mx://%s:%u:%u", bmi_mx->bnm_hostname,
                        bmi_mx->bnm_board, bmi_mx->bnm_ep_id);
        } else {
                /* mx://host:ep_id\0 */
                sprintf(peername, "mx://%s:%u", bmi_mx->bnm_hostname, 
                        bmi_mx->bnm_ep_id);
        }
        bmi_mx->bnm_peername = strdup(peername);
        return;
}

static int
bnm_peer_connect(struct bnm_peer *peer)
{
        int                     ret    = 0;
        uint64_t                nic_id = 0ULL;
        mx_request_t            request;
        uint64_t                match  = (uint64_t) BNM_MSG_ICON_REQ << BNM_MSG_SHIFT;
        struct bnm_method_addr *mxmap  = peer->mxp_mxmap;

        BNM_ENTER;

        gen_mutex_lock(&peer->mxp_lock);
        if (peer->mxp_state == BNM_PEER_INIT) {
                debug(BNM_DB_PEER, "Setting peer %s to BNM_PEER_WAIT",
                                   peer->mxp_mxmap->mxm_peername);
                peer->mxp_state = BNM_PEER_WAIT;
        } else {
                gen_mutex_unlock(&peer->mxp_lock);
                return 0;
        }
        gen_mutex_unlock(&peer->mxp_lock);
        bnm_peer_addref(peer); /* add ref until completion of CONN_REQ */

        /* if we have not opened our endpoint, do so now */
        if (bmi_mx->bnm_ep == NULL) {
                char                    host[MX_MAX_HOSTNAME_LEN + 1];
                char                    *colon  = NULL;
                mx_endpoint_addr_t      epa;

                ret = bnm_open_endpoint(&bmi_mx->bnm_ep,
                                        bmi_mx->bnm_board,
                                        MX_ANY_ENDPOINT);
                if (ret != 0) {
                        debug((BNM_DB_MX|BNM_DB_CONN), "failed to open endpoint when "
                                        "trying to conenct to %s", mxmap->mxm_peername);
                        bnm_peer_decref(peer);
                        return ret;
                }
                mx_get_endpoint_addr(bmi_mx->bnm_ep, &epa);
                /* get our nic_id and ep_id */
                mx_decompose_endpoint_addr2(epa, &nic_id, &bmi_mx->bnm_ep_id,
                                            &bmi_mx->bnm_sid);
                /* get our hostname */
                mx_nic_id_to_hostname(nic_id, host);
                bmi_mx->bnm_hostname = strdup(host);
                if (bmi_mx->bnm_hostname == NULL) {
                        debug((BNM_DB_MX|BNM_DB_CONN), "%s mx_nic_id_to_hostname() did "
                                        "not find hostname %s", __func__, host);
                        return -1;
                }
                /* if hostname has :board, remove it */
                colon = strchr(bmi_mx->bnm_hostname, ':');
                if (colon != NULL) {
                        *colon = '\0';
                } else {
                        /* no board number in our name */
                        bmi_mx->bnm_board = -1;
                }
                /* create our peername */
                bnm_create_peername();
        }
        /* this is a new peer, start the connect handshake
         * by calling mx_iconnect() w/BNM_MSG_ICON_REQ */
        mx_iconnect(bmi_mx->bnm_ep, peer->mxp_nic_id, mxmap->mxm_ep_id,
                    BNM_MAGIC, match, (void *) peer, &request);

        BNM_EXIT;

        return ret;
}

/* if it is a new peer:
 *    alloc method_addr
 *    alloc peer
 *    if client
 *       open endpoint
 *       mx_iconnect()
 */
/* This is called on the server before BMI_mx_initialize(). */
static struct bmi_method_addr *
BMI_mx_method_addr_lookup(const char *id)
{
        int                     ret     = 0;
        int                     len     = 0;
        char                   *host    = NULL;
        uint32_t                board   = 0;
        uint32_t                ep_id   = 0;
        struct bmi_method_addr *map     = NULL;
        struct bnm_method_addr *mxmap   = NULL;

        BNM_ENTER;

        debug(BNM_DB_INFO, "%s with id %s", __func__, id);
        ret = bnm_parse_peername(id, &host, &board, &ep_id);
        if (ret != 0) {
                debug(BNM_DB_PEER, "%s method_parse_peername() failed on %s", __func__, id);
                return NULL;
        }

        if (bmi_mx != NULL) {
                struct bnm_peer         *peer   = NULL;

                gen_mutex_lock(&bmi_mx->bnm_peers_lock);
                qlist_for_each_entry(peer, &bmi_mx->bnm_peers, mxp_list) {
                        mxmap = peer->mxp_mxmap;
                        if (!strcmp(mxmap->mxm_hostname, host) &&
                            mxmap->mxm_board == board &&
                            mxmap->mxm_ep_id == ep_id) {
                                map = peer->mxp_map;
                                len = strlen(host);
                                BNM_FREE(host, len);
                                break;
                        }
                }
                gen_mutex_unlock(&bmi_mx->bnm_peers_lock);
        }
        
        if (map == NULL) {
                map = bnm_alloc_method_addr(id, host, board, ep_id);
                if (bmi_mx != NULL) {
                        struct bnm_peer *peer   = NULL;

                        mxmap = map->method_data;
                        ret = bnm_peer_alloc(&peer, mxmap);
                        if (ret != 0) {
                                debug((BNM_DB_MEM|BNM_DB_PEER), "%s unable to alloc peer "
                                                "for %s", __func__, mxmap->mxm_peername);
                                goto out;
                        }
                        ret = bnm_peer_connect(peer);
                        if (ret != 0) {
                                debug((BNM_DB_CONN|BNM_DB_MX|BNM_DB_PEER), "%s peer_connect()"
                                       " failed with %d", __func__, ret);
                        }
                }
                if (map != NULL) free(host);
        }
out:
        BNM_EXIT;

        return map;
}

