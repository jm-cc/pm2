MAD_DEBUG=$1
shift
MAD_CONSOLE=$1
shift
DISPLAY=$1
shift
export DISPLAY

if test $MAD_CONSOLE = "no"
then
    command=$*
else
    prog=$1
    shift
    args=$*
    command="$prog -pm2cons $MAD_CONSOLE $args"
fi

set `cat ${MADELEINE_ROOT}/.madconf`
first=$1
shift

echo "add $*" | ${PVM_ROOT}/lib/pvm -n$first > /dev/null

if test $MAD_DEBUG = "on"
then
    ${MADELEINE_ROOT}/bin/pvm/maddebug $DISPLAY $command
else
    PVM_EXPORT="DISPLAY"
    export PVM_EXPORT
    $command
fi

echo "halt" | ${PVM_ROOT}/lib/pvm > /dev/null
