#!/bin/sh


DISPLAY=$1
shift
MAD_DEBUG=$1
shift
MAD_NUM_NODES=$1
shift
MAD_MY_NUMBER=$1
shift
MAD_MY_NAME=$1
shift
MAD_MASTER_ID=$1
shift

export DISPLAY
export MAD_DEBUG
export MAD_NUM_NODES
export MAD_MY_NUMBER
export MAD_MY_NAME
export MAD_MASTER_ID

if test -z "`/sbin/lsmod | grep Base`"
then
    su -f -c "/sbin/insmod /sci/Base.o" root
fi

if test "$MAD_DEBUG" = on
then
    ${MADELEINE_ROOT}/bin/tcp/maddebug $DISPLAY $* &
else
    TTY=`who | grep ^$USER | head -1 | tr -s ' ' | cut -f2 -d' '`
    if test "{$TTY}" = "{}"
    then
        $* &
    else
        echo Redirecting output to /dev/$TTY
        $* > /dev/$TTY &
    fi
fi

