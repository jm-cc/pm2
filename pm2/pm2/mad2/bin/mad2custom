DIRS="${MAD2_ROOT}/make"

for d in $DIRS ; do
    if [ ! -h $d/custom ] ; then
	echo "ATTENTION: Verifiez votre installation."
	echo "$d/custom doit etre un lien symbolique !"
	exit 1
    fi
done

if test $# -ge 1
then

    if test $# -ne 1
    then
	echo "Usage: $0 custom <packagename>"
	echo "          where packagename can be TCP or VIA"
	echo "          to build the specified implementation"
	exit 1
    fi

    for d in $DIRS
    do
	cd $d
	if test -d $1
	then
	    rm -f custom
	    ln -fs $1 custom
	else
	    echo "Error: $d/$1 is not a directory"
	    exit 1
	fi
    done

    touch ${MAD2_ROOT}/src/connection_interfaces/*.c
fi

echo "The current network interface is set to:" $1

exit 0
