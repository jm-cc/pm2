# Configuration
hosts=${TESTCONFIG:-"localhost localhost"}
net=${TESTNET:-tcp}
mpi="mpi_emu"
strat="strat_default"
net2=$(echo $net | tr ' ' '_')
ext="pioman"
flavor="test_nmad_${mpi}_${net2}_${strat}_${ext}"
sort_output=1

appdir="${PM2_ROOT}/nmad/examples/mpi/basics"
prog="extended"
args="--x --p --l"

rm -f /tmp/pm2test_"${USER}"_expected
nb_hosts=$(echo $hosts | wc -w)
(
for f in $(seq 1 2 $nb_hosts) ; do
    echo "nm_so_sr_isend_extended, The current strategy does not provide a extended pack"
    echo "nm_so_sr_isend_extended, The current strategy does not provide a extended pack"
done
for f in $(seq 1 2 $nb_hosts) ; do
    echo "The answer to life, the universe, and everything is 42"
done
for f in $(seq 1 2 $nb_hosts) ; do
    echo "There are 7 Wonders of the World"
done
) > /tmp/pm2test_"${USER}"_expected

. ./include/nmad_default

# Verification et compilation du lanceur leonie
compile_leonie
