#!/usr/bin/env pm2-sh
#-*-sh-*-
###########
#
# Xwindow mode loader

# $1... = command and arguments

prog=$1
shift

DISPLAY=${DISPLAY:-':0'}
export DISPLAY

# echo $HOST:$PATH
LEO_XTERM=${LEO_XTERM:-'xterm'}

title="$prog.$HOST"

# echo ${LEO_XTERM} -title $title -e pm2-wrapper $prog ${@:+"$@"}
${LEO_XTERM} -title $title -e env LD_LIBRARY_PATH="${LD_LIBRARY_PATH}" pm2-wrapper $prog ${@:+"$@"}
