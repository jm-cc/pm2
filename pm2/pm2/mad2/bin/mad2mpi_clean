#!/bin/csh -f
###########

if (! -e ${MAD2_ROOT}/.mad2mpi_implementation) then
echo "No MPI implementation has been selected"
exit 0
endif

set IMPL = `cat ${MAD2_ROOT}/.mad2mpi_implementation`

switch(${IMPL})
# LAM MPI
#---------
  case "lam":
    echo Calling lamclean ...
    lamclean -v 
  breaksw

# MPI/BIP
#---------
  case "bip":
#   bipconf
  breaksw

# Default case
#--------------
  default:
    echo "invalid MPI implementation name"
    exit 0
  breaksw
endsw

###########
