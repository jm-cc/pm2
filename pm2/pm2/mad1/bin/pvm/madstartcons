#!/bin/sh

# Just in case MAD1_ROOT is not defined
MAD1_ROOT=${MAD1_ROOT-${PM2_ROOT}/mad1}
export MAD1_ROOT

MAD_NUM_NODES=$1
shift
MAD_MY_NUMBER=$1
shift
MAD_CONSOLE=$1
shift

export MAD_NUM_NODES
export MAD_MY_NUMBER
export MAD_CONSOLE

if test $MAD_CONSOLE = "pm2"
then
    exec xterm -title "Pm2 Console" -e ${PM2_ROOT}/bin/pm2startcons pm2
else
    exec ${PM2_ROOT}/bin/pm2startcons $MAD_CONSOLE
fi
