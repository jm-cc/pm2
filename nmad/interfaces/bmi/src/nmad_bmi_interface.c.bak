static void
bnm_ctx_free(struct bnm_ctx *ctx)
{
        if (ctx == NULL) return;

        if (!list_empty(&ctx->mxc_global_list))
                list_del_init(&ctx->mxc_global_list);

        if (!list_empty(&ctx->mxc_list))
                list_del_init(&ctx->mxc_list);

        if (ctx->mxc_buffer != NULL) {
                BNM_FREE(ctx->mxc_buffer, BNM_UNEXPECTED_SIZE);
        }
        if (ctx->mxc_seg_list != NULL) {
                if (ctx->mxc_nseg > 0) {
                        BNM_FREE(ctx->mxc_seg_list, ctx->mxc_nseg * sizeof(void *));
                }
        }
        BNM_FREE(ctx, sizeof(*ctx));
        return;
}

static int
bnm_ctx_alloc(struct bnm_ctx **ctxp, enum bnm_req_type type)
{
        struct bnm_ctx *ctx     = NULL;

        if (ctxp == NULL) return -BMI_EINVAL;

        BNM_MALLOC(ctx, sizeof(*ctx));
        if (ctx == NULL) return -BMI_ENOMEM;

        ctx->mxc_type = type;
        ctx->mxc_state = BNM_CTX_INIT;
        /* ctx->mxc_msg_type */

        INIT_QLIST_HEAD(&ctx->mxc_global_list);
        INIT_QLIST_HEAD(&ctx->mxc_list);

        /* ctx->mxc_mop */
        /* ctx->mxc_peer */
        /* ctx->mxc_tag */

        ctx->mxc_seg.segment_ptr = ctx->mxc_buffer;
        /* ctx->mxc_seg.segment_length */
        /* only server recv unexpected messages */
        if (bmi_mx->bnm_is_server == 1 && type == BNM_REQ_RX) {
#if BNM_MEM_TWEAK
                int i = 0;
                for (i = 0; i < BNM_UNEXPECTED_NUM; i++) {
                        struct bnm_buffer *buf  = NULL;
                        BNM_MALLOC(buf, sizeof(*buf));
                        if (buf) {
                                INIT_QLIST_HEAD(&buf->mxb_list);
                                BNM_MALLOC(buf->mxb_buffer, BNM_UNEXPECTED_SIZE);
                                if (buf->mxb_buffer) {
                                        if (i == 0) {
                                                ctx->mxc_buffer = buf->mxb_buffer;
                                                gen_mutex_lock(&bmi_mx->bnm_used_unex_buffers_lock);
                                                qlist_add(&buf->mxb_list,
                                                          &bmi_mx->bnm_used_unex_buffers);
                                                gen_mutex_unlock(&bmi_mx->bnm_used_unex_buffers_lock);
                                        } else {
                                                gen_mutex_lock(&bmi_mx->bnm_idle_unex_buffers_lock);
                                                qlist_add(&buf->mxb_list,
                                                          &bmi_mx->bnm_idle_unex_buffers);
                                                gen_mutex_unlock(&bmi_mx->bnm_idle_unex_buffers_lock);
                                        }
                                } else {
                                        BNM_FREE(buf, sizeof(*buf));
                                }
                        }
                }
#else
                BNM_MALLOC(ctx->mxc_buffer, BNM_UNEXPECTED_SIZE);
                if (ctx->mxc_buffer == NULL) {
                        bnm_ctx_free(ctx);
                        return -BMI_ENOMEM;
                }
#endif
        }
        /* ctx->mxc_seg_list */
        /* ctx->mxc_nseg */
        /* ctx->mxc_nob */
        /* ctx->mxc_mxreq */
        /* ctx->mxc_mxstat */

        ctx->mxc_get = 1; /* put_idle_ctx() will increment the put */
        /* ctx->mxc_put */

        if (type == BNM_REQ_TX) {
                gen_mutex_lock(&bmi_mx->bnm_lock);
                qlist_add_tail(&ctx->mxc_global_list, &bmi_mx->bnm_txs);
                gen_mutex_unlock(&bmi_mx->bnm_lock);
        } else {
                gen_mutex_lock(&bmi_mx->bnm_lock);
                qlist_add_tail(&ctx->mxc_global_list, &bmi_mx->bnm_rxs);
                gen_mutex_unlock(&bmi_mx->bnm_lock);
        }

        *ctxp = ctx;
        return 0;
}

static void
bnm_ctx_init(struct bnm_ctx *ctx)
{
        struct bnm_peer *peer   = NULL;

        BNM_ENTER;

        if (ctx == NULL) return;

        peer = ctx->mxc_peer;

        /* ctx->mxc_type */
        ctx->mxc_state = BNM_CTX_IDLE;
        /* ctx->mxc_msg_type */
        
        /* ctx->mxc_global_list */
        if (!qlist_empty(&ctx->mxc_list)) {
                debug(BNM_DB_ERR, "%s %s still on a list", __func__,
                      ctx->mxc_type == BNM_REQ_TX ? "tx" : "rx");
                exit(1);
        }

        ctx->mxc_mop = NULL;
        ctx->mxc_peer = NULL;
        ctx->mxc_tag = 0;
        ctx->mxc_match = 0ULL;

        if (ctx->mxc_type == BNM_REQ_TX && ctx->mxc_buffer != NULL && ctx->mxc_nseg == 1) {
                BNM_FREE(ctx->mxc_buffer, ctx->mxc_seg.segment_length);
                ctx->mxc_buffer = NULL;
        }
        ctx->mxc_seg.segment_ptr = ctx->mxc_buffer;
        ctx->mxc_seg.segment_length = 0;
        if (ctx->mxc_seg_list != NULL) {
                if (ctx->mxc_nseg > 0) {
                        BNM_FREE(ctx->mxc_seg_list, ctx->mxc_nseg * sizeof(void *));
                }
                ctx->mxc_seg_list = NULL;
        }
        ctx->mxc_nseg = 0;
        ctx->mxc_nob = 0LL;
        ctx->mxc_mxreq = NULL;
        memset(&ctx->mxc_mxstat, 0, sizeof(mx_status_t));

        /* ctx->mxc_get */
        /* ctx->mxc_put */

        BNM_EXIT;
        return;
}

/* add to peer's queued txs/rxs list */
static void
bnm_q_ctx(struct bnm_ctx *ctx)
{
        struct bnm_peer *peer = ctx->mxc_peer;
        list_t          *queue = ctx->mxc_type == BNM_REQ_TX ? &peer->mxp_queued_txs :
                                                              &peer->mxp_queued_rxs;

        BNM_ENTER;
        ctx->mxc_state = BNM_CTX_QUEUED;
        gen_mutex_lock(&peer->mxp_lock);
        qlist_add_tail(&ctx->mxc_list, queue);
        gen_mutex_unlock(&peer->mxp_lock);
        BNM_EXIT;
        return;
}

/* remove from peer's queued txs/rxs list */
static void
bnm_deq_ctx(struct bnm_ctx *ctx)
{
        struct bnm_peer *peer = ctx->mxc_peer;

        BNM_ENTER;
        if (!qlist_empty(&ctx->mxc_list)) {
                gen_mutex_lock(&peer->mxp_lock);
                qlist_del_init(&ctx->mxc_list);
                gen_mutex_unlock(&peer->mxp_lock);
        }
        BNM_EXIT;
        return;
}

/* add to peer's pending rxs list */
static void
bnm_q_pending_ctx(struct bnm_ctx *ctx)
{
        struct bnm_peer *peer = ctx->mxc_peer;

        BNM_ENTER;
        ctx->mxc_state = BNM_CTX_PENDING;
        if (ctx->mxc_type == BNM_REQ_RX) {
                if (peer) {
                        gen_mutex_lock(&peer->mxp_lock);
                        qlist_add_tail(&ctx->mxc_list, &peer->mxp_pending_rxs);
                        gen_mutex_unlock(&peer->mxp_lock);
                }
        }
        BNM_EXIT;
        return;
}

/* remove from peer's pending rxs list */
static void
bnm_deq_pending_ctx(struct bnm_ctx *ctx)
{
        struct bnm_peer *peer = ctx->mxc_peer;

        BNM_ENTER;
        if (ctx->mxc_state == BNM_CTX_PENDING) {
                ctx->mxc_state = BNM_CTX_COMPLETED;
        }
        if (ctx->mxc_type == BNM_REQ_RX) {
                if (peer && !qlist_empty(&ctx->mxc_list)) {
                        gen_mutex_lock(&peer->mxp_lock);
                        qlist_del_init(&ctx->mxc_list);
                        gen_mutex_unlock(&peer->mxp_lock);
                }
        }
        BNM_EXIT;
        return;
}

/* queue on unexpected rx or tx list */
static void
bnm_q_unex_ctx(struct bnm_ctx *ctx)
{
        BNM_ENTER;
        if (ctx->mxc_type == BNM_REQ_RX) {
                gen_mutex_lock(&bmi_mx->bnm_unex_rxs_lock);
                qlist_add_tail(&ctx->mxc_list, &bmi_mx->bnm_unex_rxs);
                gen_mutex_unlock(&bmi_mx->bnm_unex_rxs_lock);
        } else {
                gen_mutex_lock(&bmi_mx->bnm_unex_txs_lock);
                qlist_add_tail(&ctx->mxc_list, &bmi_mx->bnm_unex_txs);
                gen_mutex_unlock(&bmi_mx->bnm_unex_txs_lock);
        }
        BNM_EXIT;
        return;
}

/* add to the global canceled list */
static void
bnm_q_canceled_ctx(struct bnm_ctx *ctx, bmi_error_code_t error)
{
        BNM_ENTER;
        ctx->mxc_state = BNM_CTX_CANCELED;
        if (error < 0)
                ctx->mxc_mxstat.code = error;
        else
                ctx->mxc_mxstat.code = -error;
        gen_mutex_lock(&bmi_mx->bnm_canceled_lock);
        qlist_add_tail(&ctx->mxc_list, &bmi_mx->bnm_canceled);
        gen_mutex_unlock(&bmi_mx->bnm_canceled_lock);
        BNM_EXIT;
        return;
}

static struct bnm_ctx *
bnm_get_idle_rx(void)
{
        struct bnm_ctx  *rx     = NULL;
        list_t          *l      = &bmi_mx->bnm_idle_rxs;

        gen_mutex_lock(&bmi_mx->bnm_idle_rxs_lock);
        if (!qlist_empty(l)) {
                rx = qlist_entry(l->next, struct bnm_ctx, mxc_list);
                qlist_del_init(&rx->mxc_list);

                if (rx->mxc_get != rx->mxc_put) {
                        debug(BNM_DB_ERR, "get_idle_rx() get (%llu) != put (%llu)",
                                (unsigned long long) rx->mxc_get, 
                                (unsigned long long) rx->mxc_put);
                        exit(1);
                }
                rx->mxc_get++;

                if (!(rx->mxc_state == BNM_CTX_IDLE || rx->mxc_state == BNM_CTX_INIT)) {
                        debug(BNM_DB_ERR, "get_idle_rx() rx state is %d",
                                (int) rx->mxc_state);
                        exit(1);
                }
                rx->mxc_state = BNM_CTX_PREP;
        }
        gen_mutex_unlock(&bmi_mx->bnm_idle_rxs_lock);

        return rx;
}

static void
bnm_put_idle_rx(struct bnm_ctx *rx)
{
        if (rx == NULL) {
                debug(BNM_DB_WARN, "put_idle_rx() called with NULL");
                return;
        }
        if (rx->mxc_type != BNM_REQ_RX) {
                debug(BNM_DB_WARN, "put_idle_rx() called with a TX");
                return;
        }
        if (rx->mxc_get != rx->mxc_put + 1) {
                debug(BNM_DB_ERR, "put_idle_rx() get (%llu) != put (%llu) + 1",
                         (unsigned long long) rx->mxc_get,
                         (unsigned long long) rx->mxc_put);
                exit(1);
        }
        bnm_ctx_init(rx);
        rx->mxc_put++;
        gen_mutex_lock(&bmi_mx->bnm_idle_rxs_lock);
        qlist_add(&rx->mxc_list, &bmi_mx->bnm_idle_rxs);
        gen_mutex_unlock(&bmi_mx->bnm_idle_rxs_lock);
        return;
}

static void
bnm_reduce_idle_rxs(int count)
{
        int              i      = 0;
        struct bnm_ctx  *rx     = NULL;

        for (i = 0; i < count; i++) {
                rx = bnm_get_idle_rx();
                if (rx != NULL) {
                        bnm_ctx_free(rx);
                }
        }

        return;
}

