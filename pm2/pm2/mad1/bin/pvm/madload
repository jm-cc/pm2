#!/bin/sh

# Just in case MAD1_ROOT is not defined
MAD1_ROOT=${MAD1_ROOT-${PM2_ROOT}/mad1}
export MAD1_ROOT

nomore=0
MAD_DEBUG=off
MAD_CONSOLE=no
while [ $# -ge 1 -a $nomore = 0 ]; do
	case "$1" in
	-d) MAD_DEBUG=on; shift;;
	-c) shift;
	    if [ $# -lt 1 ] ; then
		echo "Usage: $0 [ -d | -c <console> ] <execname> [ <arg1> ... <argn> ]"
		exit 1
	    else
		MAD_CONSOLE=$1; shift
	    fi;;
	--) nomore=1; shift;;
	-*) echo "Usage: $0 [ -d | -c <console> ] <execname> [ <arg1> ... <argn> ]"; exit 1 ;;
	*) nomore=1;;
	esac
done

if test $# -lt 1
then
	echo "Usage: $0 [ -d | -c <console> ] <execname> [ <arg1> ... <argn> ]"
	exit 1
fi

if test ! -f ${MAD1_ROOT}/.madconf
then
	echo "ERROR: madconf should be runned before $0..."
	exit 1
fi

case $1 in
    /*) command=$* ;;
    *) command=`pwd`/$*
esac

case _$DISPLAY in
    _) DISPLAY=`uname -n` ;;
    _:*) DISPLAY=`uname -n`$DISPLAY ;;
    *) ;;
esac

set `cat ${MAD1_ROOT}/.madconf`

exec rsh $1 ${MAD1_ROOT}/bin/pvm/madinit $MAD_DEBUG $MAD_CONSOLE "$DISPLAY" $command
