# Configuration
flavor="test_madeleine"
appdir="${PM2_ROOT}/mad2/examples"
prog="mad_test"
args=""
hosts="`uname -n` `uname -n`"
cat > /tmp/pm2test_expected <<EOF
adapter: TCP0
Express data 1 : 1
Express data 2 : 2
Express data 5 : 5
Express data (len) : 38
Received data : 1, 2, 3, 4, 5, 6
len = 38
The sender node of this message is 1
EOF

# Creation de la flavor
eval ${PM2_ROOT}/bin/pm2-flavor set --flavor=\"$flavor\" \
	--builddir=\"/tmp/$flavor\" --ext=\"\" \
	--modules=\"mad2 tbx ntbx\" \
	--mad2=\"auto_spawn\" --mad2=\"tcp\" \
	--all=\"opt\" $_output_redirect
