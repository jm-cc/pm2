\newcommand{\internalfigurelisting}[4]{
  \begin{figure}
    \begin{center}
      \footnotesize
      \begin{boxedminipage}{0.95\textwidth}
        \message{[Including Progs/#1] }
        \listinginput[5]{1}{Progs/#1}
      \end{boxedminipage}
    \end{center}
    \caption{[\|#2|] #3.\label{#4}}
  \end{figure}
  }

\newcommand{\figurelisting}[3]{
  \internalfigurelisting{#1}{#1}{#2}{#3}
}

\newcommand{\figurelistingdouble}[3]{
  \internalfigurelisting{#1-0}{#1}{#2 (Part 1/2)}{#3}
  \internalfigurelisting{#1-1}{#1}{#2 (Part 2/2)}{#3-1}
  }

\newcommand{\figurelistingtriple}[3]{
  \internalfigurelisting{#1-0}{#1}{#2 (Part 1/3)}{#3}
  \internalfigurelisting{#1-1}{#1}{#2 (Part 2/3)}{#3-1}
  \internalfigurelisting{#1-2}{#1}{#2 (Part 2/3)}{#3-2}
  }

