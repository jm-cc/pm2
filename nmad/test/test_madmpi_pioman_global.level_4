# Configuration
create_test_hosts 2;
net=${TESTNET:-tcp}
mpi="mpi_emu"
strat="strat_default"
net2=$(echo $net | tr ' ' '_')
ext="pioman"
flavor="test_nmad_${mpi}_${net2}_${ext}"

appdir="${PM2_ROOT}/nmad/examples/mpi/basics"
prog="global"
args="--x --p --l"
sort_output=1

rm -f /tmp/pm2test_"${USER}"_expected
ranks=$(expr $(echo $hosts | wc -w) - 1)
(
echo "[0] Success for broadcasted message"
echo "[0] Success for broadcasted message"
echo "[0] Success for global product"
echo "[0] Success for global reduction"
echo "[0] Success for global sum"
for f in $(seq 1 $ranks) ; do
    echo "[$f] Success for broadcasted message"
    echo "[$f] Success for broadcasted message"
    echo "[$f] Success for global product"
    echo "[$f] Success for global reduction"
done
) > /tmp/pm2test_"${USER}"_expected

. ./include/nmad_default

