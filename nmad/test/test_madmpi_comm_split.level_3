# Configuration
hosts=${TESTCONFIG:-"localhost localhost"}
net=${TESTNET:-tcp}
mpi="mpi_emu"
strat="strat_default"
net2=$(echo $net | tr ' ' '_')
flavor="test_nmad_${mpi}_${net2}_${strat}"

appdir="${PM2_ROOT}/nmad/examples/mpi/basics"
prog="comm_split"
args="--x --p --l"
sort_output=1

rm -f /tmp/pm2test_"${USER}"_expected
nb_hosts=$(echo $hosts | wc -w | tr -d ' ')
ranks=$(expr $nb_hosts - 1)
(for n in $(seq 0 $ranks) ; do
    echo "a. [$n] Communicator 91 with $nb_hosts nodes"
done

moitie=$(expr $nb_hosts / 2)
for n in $(seq 0 $ranks) ; do
    local=$(expr \( $ranks - $n \) / 2)
    echo "b. [$n] Communicator 93 with $moitie nodes, local rank $local"
done

if [ $nb_hosts -gt 2 ] ; then
    for n in $(seq 0 $ranks) ; do
        local=$(expr \( $ranks - $n \) / 2)
        if [ $local == 1 ] ; then
            echo "c. [$n] Received message: 42"
        fi
    done
fi

if [ $nb_hosts -gt 2 ] ; then
    diviseur=4
else
    diviseur=2
fi
quart=$(expr $nb_hosts / $diviseur)
for n in $(seq 0 $ranks) ; do
    local=$(expr $n / $diviseur)
    echo "d. [$n] Communicator 94 with $quart nodes, local rank $local"
done

) >> /tmp/pm2test_"${USER}"_expected

. ./include/nmad_default

# Verification et compilation du lanceur leonie
compile_leonie
