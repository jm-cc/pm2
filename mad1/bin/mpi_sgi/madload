# Just in case MAD1_ROOT is not defined
MAD1_ROOT=${MAD1_ROOT-${PM2_ROOT}/mad1}
export MAD1_ROOT

case $1 in
    /*) command=$* ;;
    *) command=`pwd`/$*
esac

set `cat $MAD1_ROOT/.madconf`
nb_hosts=$#

set $command
prog=$1
shift

mpirun -np $nb_hosts $prog  $*


