command=$*

#case $1 in
#    /*) command=$* ;;
#    *) command=`pwd`/$*
#esac

set $command
prog=$1
shift

set `cat $PM2_CONF_FILE`
nb_hosts=$1
shift

for h in $*
do
 rcp $prog $h:/tmp/$LOGNAME
done

MP_PROCS=$nb_hosts
MP_EUILIB=us
MP_HOSTFILE=$PM2_CONF_FILE
MP_EUIDEVICE=css0
export MP_PROCS
export MP_EUILIB
export MP_HOSTFILE
export MP_EUIDEVICE

set $command
shift

cd /tmp/$LOGNAME
prog=`basename $prog`
poe $prog $*

