if test $# -gt 0
then
    ARCH=$*
else
    ARCH=`cat ${MARCEL_ROOT}/ARCHITECTURES`
fi

echo Cleaning MARCEL:
echo
for i in $ARCH
do
	echo $i
	# librairies 
	for f in `ls ${MARCEL_ROOT}/lib/$i`
	do
	    if [ ! -d ${MARCEL_ROOT}/lib/$i/$f ] ; then
		echo "	deleting ${MARCEL_ROOT}/lib/$i/$f"
		rm ${MARCEL_ROOT}/lib/$i/$f
	    fi
	done
	# objets "source"
	for f in `ls ${MARCEL_ROOT}/source/obj/$i`
	do
	    if [ ! -d ${MARCEL_ROOT}/source/obj/$i/$f ] ; then
		echo "	deleting ${MARCEL_ROOT}/source/obj/$i/$f"
		rm ${MARCEL_ROOT}/source/obj/$i/$f
	    fi
	done
	# executables
	for f in `ls ${MARCEL_ROOT}/examples/bin/$i`
	do
	    if [ ! -d ${MARCEL_ROOT}/examples/bin/$i/$f ] ; then
		echo "	deleting ${MARCEL_ROOT}/examples/bin/$i/$f"
		rm ${MARCEL_ROOT}/examples/bin/$i/$f
	    fi
	done
	# objets
	for f in `ls ${MARCEL_ROOT}/examples/obj/$i`
	do
	    if [ ! -d ${MARCEL_ROOT}/examples/obj/$i/$f ] ; then
		echo "	deleting ${MARCEL_ROOT}/examples/obj/$i/$f"
		rm ${MARCEL_ROOT}/examples/obj/$i/$f
	    fi
	done
done
