if [ $# -ne 1 ] ; then
    echo "Error: $0 needs a console name as an argument"
    exit 1;
fi

PM2_SYS=`${PM2_ROOT}/bin/pm2_sys`
PM2_ARCH=`${PM2_ROOT}/bin/pm2_arch`

file=$PM2_ROOT/console/bin/`basename $PM2_SYS _SYS`/`basename $PM2_ARCH _ARCH`/$1
shift

if [ ! -f $file ] ; then
    echo "Cannot found program $file: Make sure you compiled it."
    echo "<Press Return>"
    read x
    exit 1
fi

exec $file $*
