#!/bin/sh

DISPLAY=$1
shift
MAD_CONSOLE=$1
shift
MAD_NUM_NODES=$1
shift
MAD_MY_NUMBER=$1
shift
MAD_MY_NAME=$1
shift
MAD_SERVER_PORT=$1
shift
MAD_SERVER_HOST=$1
shift

export DISPLAY
export MAD_CONSOLE
export MAD_NUM_NODES
export MAD_MY_NUMBER
export MAD_MY_NAME
export MAD_SERVER_PORT
export MAD_SERVER_HOST

if test $MAD_CONSOLE = "pm2"
then
    xterm -title "Pm2 Console" -e ${PM2_ROOT}/bin/pm2startcons pm2 &
else
    ${PM2_ROOT}/bin/pm2startcons $MAD_CONSOLE &
fi


