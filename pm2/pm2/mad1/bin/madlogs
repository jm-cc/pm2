# Just in case MAD1_ROOT is not defined
MAD1_ROOT=${MAD1_ROOT-${PM2_ROOT}/mad1}
export MAD1_ROOT

if [ "$1" = "-pm2" ] ; then
	shift
	LOG=pm2log
	if [ -f ${MAD1_ROOT}/.mad_standalone ] ; then
		echo "Warning: Madeleine was last compiled as a standalone library."
	fi
else
	LOG=madlog
	if [ -f ${MAD1_ROOT}/.mad_pm2 ] ; then
		echo "Warning: Madeleine was last compiled as a PM2 component."
	fi
fi

set `cat ${MAD1_ROOT}/.madconf | sort | uniq`

for host in $* ; do
	rsh $host ${MAD1_ROOT}/bin/vlocallogs ${LOG} $host
done

