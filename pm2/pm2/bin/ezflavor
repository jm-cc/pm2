#!/bin/sh

PM2_ARCH=`$PM2_ROOT/bin/pm2_arch`
PM2_SYS=`$PM2_ROOT/bin/pm2_sys`

case "$PM2_SYS" in
    WIN*_SYS)
	ext=".exe"
	;;
    *)
	ext=""
	;;
esac

prog=${PM2_HOME:-${HOME}}/.pm2/bin/ezflavor_${PM2_ARCH}_${PM2_SYS}${ext}

if [ ! -x $prog ]; then
    echo "ERROR: ezflavor was not compiled for $PM2_ARCH/$PM2_SYS" >&2
    exit 1
fi

exec ${PM2_HOME:-${HOME}}/.pm2/bin/ezflavor_${PM2_ARCH}_${PM2_SYS}${ext} "$@"
