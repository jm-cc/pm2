#!/bin/sh

# Just in case MAD2_ROOT is not defined
MAD2_ROOT=${MAD2_ROOT-${PM2_ROOT}/mad2}
export MAD2_ROOT

if [ -n "${PM2_CONSOLE}" ]; then
    prog="$1 -pm2cons $PM2_CONSOLE"
    shift
else
    prog="$1"
    shift
fi

case "_${DISPLAY}" in
    _) DISPLAY=`uname -n`:0.0 ;;
    _:*) DISPLAY=`uname -n`${DISPLAY} ;;
    *) ;;
esac

# Note: PM2_CONF_FILE is inherited
host=`head -1 ${PM2_CONF_FILE}`

args=""
while [ $# -gt 0 ]; do
    args="$args '$1'"
    shift
done

if [ "${PM2_DEBUG}" = on ]; then
    prefix='pm2_gdb_load'
    args="$args -d"
else
    prefix=""
fi

# The first node has rank 0
args="$args -rank 0"

# Append the command name
args="$args -mad_app_cmd $prog"

PM2_RSH=${PM2_RSH:-rsh} 

cmd="PM2_RSH='${PM2_RSH}';export PM2_RSH;DISPLAY=$DISPLAY;export DISPLAY;PM2_CONF_FILE=$PM2_CONF_FILE;export PM2_CONF_FILE;$prefix $prog $args"

case $host in
    localhost|`hostname`)
	/bin/sh -c "$cmd"
	;;
    *)
	${PM2_RSH} $host /bin/sh -c \""$cmd"\"
	;;
esac
