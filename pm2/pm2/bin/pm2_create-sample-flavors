PM2_CREATE_FLAVOR=${PM2_CREATE_FLAVOR:-${PM2_ROOT}/bin/pm2-flavor}


if [ -d ${PM2_ROOT}/flavors ]; then
    rm -rf ${PM2_ROOT}/flavors
fi

mkdir -p ${PM2_ROOT}/flavors

$PM2_CREATE_FLAVOR --admin set --flavor=default \
    --modules="pm2 dsm marcel mad2 tbx ntbx" --all=opt --marcel=mono --mad2=auto_spawn --mad2=tcp

for i in mono smp act actsmp; do
    $PM2_CREATE_FLAVOR --admin set --flavor=marcel-$i --modules="marcel" \
	--ext=-$i --marcel=$i --builddir=marcel --all=opt
done
$PM2_CREATE_FLAVOR --admin set --flavor=marcel --modules="marcel" --all=opt --marcel=mono

$PM2_CREATE_FLAVOR --admin set --flavor=swann --modules="swann tbx ntbx" --all=opt
$PM2_CREATE_FLAVOR --admin set --flavor=leonie --modules="leonie tbx ntbx" --all=opt
$PM2_CREATE_FLAVOR --admin set --flavor=mad2 --modules="mad2 tbx ntbx" --all=opt --mad2=auto_spawn --mad2=tcp
$PM2_CREATE_FLAVOR --admin set --flavor=mad1 --modules="mad1" --all=opt --mad1=tcp
$PM2_CREATE_FLAVOR --admin set --flavor=pm2-mad2 --modules="pm2 dsm marcel mad2 tbx ntbx" \
    --all=opt --marcel=mono --mad2=auto_spawn --mad2=tcp
$PM2_CREATE_FLAVOR --admin set --flavor=pm2-mad1 --modules="pm2 marcel mad1" \
    --all=opt --marcel=mono --mad1=tcp
