# Mad2_protocols
# --------------

# protocol <protocol name>
protocol tcp:
{
# Macro defined for this driver
  macro:    DRV_TCP;

# Module file prefix
  module:   mad_tcp;

# Module registration function
  register: mad_tcp_register;

# Adapter selection scheme
  adapter:  suffix;

# External spawn support required ???
  loader:   no;
};

protocol via:
{
  macro:    DRV_VIA;
  module:   mad_via;
  register: mad_via_register;
  adapter:  selector;
  loader:   no;
};

protocol sisci:
{
  macro:    DRV_SISCI;
  module:   mad_sisci;
  register: mad_sisci_register;
  adapter:  selector;
  loader:   no;
};

protocol sbp:
{
  macro:    DRV_SBP;
  module:   mad_sbp;
  register: mad_sbp_register;
  adapter:  none;
  loader:   yes;
};

protocol mpi:
{
  macro:    DRV_MPI;
  module:   mad_mpi;
  register: mad_mpi_register;
  adapter:  none;
  loader:   yes;
}
