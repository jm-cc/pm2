# Configuration
flavor="test_marcel_smp"
appdir="${PM2_ROOT}/marcel/examples"
prog="smptest"
args="--marcel-nvp 5"
hosts="localhost"
cat > /tmp/pm2test_expected <<EOF
Hi! I'm thread 0 on VP 0
Hi! I'm thread 1 on VP 1
Hi! I'm thread 2 on VP 2
Hi! I'm thread 3 on VP 3
Hi! I'm thread 4 on VP 4
Hi! I'm thread 5 on VP 0
Hi! I'm thread 6 on VP 1
Hi! I'm thread 7 on VP 2
Hi! I'm thread 8 on VP 3
Hi! I'm thread 9 on VP 4
EOF

# Creation de la flavor
eval ${PM2_ROOT}/bin/pm2-flavor set --flavor=\"$flavor\" \
	--builddir=\"/tmp/$flavor\" --ext=\"\" \
	--modules=\"marcel tbx\" \
	--marcel=\"smp\" --marcel=\"marcel_main\" \
	--all=\"opt\" --common=\"static\" $_output_redirect
