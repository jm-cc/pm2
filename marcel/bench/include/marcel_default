# args: loop variable
initialize_bench()
{
    # Creation de la flavor
    if [ "$marcel" == "numa" ] ; then
        marcel_options="bubble_sched_null enable_stats"
    else
        marcel_options=""
    fi
    eval ${PM2_ROOT}/bin/pm2-flavor set --flavor=\"$flavor\" \
        --ext=\"\" \
        --modules=\"init marcel ntbx tbx\"\
        --marcel=\"marcel_main $marcel $marcel_options\" \
        --all=\"opt build_static static\"

    ${PM2_ROOT}/bin/pm2-conf -f $flavor $hosts
}

# args: -
run_bench()
{
    # wait for NFS to propagate the new compiled program
    sleep 10

    ${PM2_ROOT}/bin/pm2-load -f $flavor $prog $args
}

dest_result="."
# args: loop variable
finalize_bench()
{
    file_result="/tmp/pm2_bench_${prog}_${USER}_result"
    if [ "$BENCHDIR" != "" ] && [ -d $BENCHDIR ] ; then
        cp $file_result $BENCHDIR/$dest_result
    fi
}
