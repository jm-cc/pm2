# Just in case MAD1_ROOT is not defined
MAD1_ROOT=${MAD1_ROOT-${PM2_ROOT}/mad1}
export MAD1_ROOT

if [ -n "${PM2_CONSOLE}" ]; then
    prog="$1 -pm2cons $PM2_CONSOLE"
    shift
else
    prog="$1"
    shift
fi

case "_${DISPLAY}" in
    _) DISPLAY=`uname -n`:0.0 ;;
    _:*) DISPLAY=`uname -n`${DISPLAY} ;;
    *) ;;
esac

# Note: PM2_CONF_FILE is inherited
host=`head -1 ${PM2_CONF_FILE}`

args=""
while [ $# -gt 0 ]; do
    args="$args '$1'"
    shift
done

if [ "${PM2_DEBUG}" = on ]; then
    prefix=${MAD2_ROOT}/bin/tcp/maddebug
else
    prefix=""
fi

${PM2_RSH:-rsh} $host /bin/sh -c \"DISPLAY=$DISPLAY\;export DISPLAY\;PM2_CONF_FILE=$PM2_CONF_FILE\;export PM2_CONF_FILE\;$prefix $prog $args\"
