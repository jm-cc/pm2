
# set -x

PROG=$1

if [ "$OSTYPE" = "linux-gnu" ]
then
	CONF="resama cluster10 cluster11"
else
	CONF="ravel debussy faure"
fi

HOSTNAME=`hostname`
PROG=`basename $PROG /`

run () {
	CMD=$1
	echo "$HOSTNAME% $CMD"
	csh -c "$CMD"
	echo
}

cd Progs

make $PROG

run  "pm2conf $CONF"

run "pm2load $PROG"

run "pm2logs"