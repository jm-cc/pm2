. ./mami.sh
prog="hugepages"
hugepages_free=$(grep HugePages_Free: /sys/devices/system/node/node0/meminfo | awk '{print $NF}')
if [ "$hugepages_free" == "0" ] ; then
    cat > /tmp/pm2test_"${USER}"_expected <<EOF
No huge page available.
EOF
else
    cat > /tmp/pm2test_"${USER}"_expected <<EOF
mami_malloc succesfully failed: Cannot allocate memory
ptr[10]=10
ptr2[20]=20
EOF
fi

