# Just in case MAD1_ROOT is not defined
MAD1_ROOT=${MAD1_ROOT-${PM2_ROOT}/mad1}
export MAD1_ROOT

case $1 in
    /*) command=$* ;;
    *) command=`pwd`/$*
esac

PM2_CONF_DIR=`pm2-config --flavor=${PM2_FLAVOR:-default} --builddir 2>/dev/null`

[ $? -eq 0 ] || error "Error: \"${PM2_FLAVOR}\" is not a valid flavor."

PM2_CONF_FILE=${PM2_CONF_DIR}/.pm2conf

[ -f ${PM2_CONF_FILE} ] || error "Error: conf file not found -> use pm2conf."

set `cat ${PM2_CONF_FILE}`

chaine=""
for i in $*
do
    chaine="${chaine} `basename $i -t`"
done
bipconf $chaine
bipload -mget $command
