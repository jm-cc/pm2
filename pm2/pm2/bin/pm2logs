PM2_FLAVOR=${PM2_FLAVOR:-default}
export PM2_FLAVOR

usage()
{
    echo "Usage : `basename $0` [-f flavor] [node [node...]]"
}

error() # msg
{
    echo $*
    exit 1
}

# Début du script

PM2_LOGS=""
while [ $# -gt 0 ]; do
    case $1 in
	-f)
	    PM2_FLAVOR="$2"; shift
	    ;;
	[0-9]*)
	    PM2_LOGS="$PM2_LOGS $1 "
	    ;;
	*)
	    usage
	    error "Aborting : unknown option $1"
	    ;;
    esac
    shift
done

set `${PM2_ROOT}/bin/pm2-config --modules`

mod='pm2'

for i
do
    case $i in
      pm2) mod='pm2'; break;;
      mad2) mod='mad2'; break;; 
    esac
done

PM2_CONF_FILE=`${PM2_ROOT}/bin/pm2-conf-file`
[ $? -eq 0 ] || error "Error: unable to get the .pm2conf file path."
export PM2_CONF_FILE

[ -f ${PM2_CONF_FILE} ] || error "Error: PM2 not yet configured for flavor \"${PM2_FLAVOR}\" (please run pm2conf)."

n=0
for host in `cat ${PM2_CONF_FILE}`; do
    case " $PM2_LOGS " in
	*" $n "*|"  ")
	    eval logs_on_host_$host=\"\$logs_on_host_$host /tmp/${USER}-${mod}log-$n\"
	    ;;
	*)
	    echo Do not display node $n
	    ;;
    esac
    n=`expr $n + 1`
done

for host in `cat ${PM2_CONF_FILE} | sort | uniq` ; do
    eval logs=\"\$logs_on_host_$host\"
    ${PM2_RSH:-rsh} $host ${PM2_ROOT}/bin/pm2-vlocallogs $host $logs
done

