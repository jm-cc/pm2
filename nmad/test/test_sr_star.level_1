# Configuration
create_test_hosts 2;
net=${TESTNET:-tcp}
mpi=""
strat="strat_default"
net2=$(echo $net | tr ' ' '_')
flavor="test_nmad_${mpi}_${net2}"

appdir="${PM2_SRCROOT}/nmad/examples/sendrecv"
prog="sr_star"
args="--x --p --l"

rm -f /tmp/pm2test_"${USER}"_expected
nb_children=$(expr $(echo $hosts | wc -w) - 1)
for child in $(seq 1 $nb_children) ; do
    echo "[0] Message from child $child [12.450000,3.140000]" >> /tmp/pm2test_"${USER}"_expected
done

. ./include/nmad_default

