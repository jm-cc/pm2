/* bnm_peer_disconnect - close the connection to this peer
 * @peer - a bnm_peer pointer
 * @mx_dis - an integer, 0 or 1, where 1 means call mx_disconnect()
 *
 * This function sets peer state to DISCONNECT, sets all queued rxs and txs to
 * CANCELED and places them on the canceled list, cancels pending rxs and 
 * optionally calls mx_disconnect() to cancel pending txs and matched rxs.
 */
static void
bnm_peer_disconnect(struct bnm_peer *peer, int mx_dis, bmi_error_code_t err)
{
        struct bnm_ctx  *tx     = NULL;
        struct bnm_ctx  *rx     = NULL;
        struct bnm_ctx  *next   = NULL;

        debug(BNM_DB_CONN, "%s for %s in state %d (%d)", __func__,
                        peer->mxp_mxmap->mxm_peername, peer->mxp_state, mx_dis);
        gen_mutex_lock(&peer->mxp_lock);
        if (peer->mxp_state == BNM_PEER_DISCONNECT) {
                gen_mutex_unlock(&peer->mxp_lock);
                return;
        }
        debug(BNM_DB_PEER, "Setting peer %s to BNM_PEER_DISCONNECT",
                           peer->mxp_mxmap->mxm_peername);
        peer->mxp_state = BNM_PEER_DISCONNECT;

        /* cancel queued txs */
        while (!qlist_empty(&peer->mxp_queued_txs)) {
                list_t          *queued_txs     = &peer->mxp_queued_txs;
                tx = qlist_entry(queued_txs->next, struct bnm_ctx, mxc_list);
                qlist_del_init(&tx->mxc_list);
                bnm_q_canceled_ctx(tx, err);
        }
        /* cancel queued rxs */
        while (!qlist_empty(&peer->mxp_queued_rxs)) {
                list_t          *queued_rxs     = &peer->mxp_queued_rxs;
                rx = qlist_entry(queued_rxs->next, struct bnm_ctx, mxc_list);
                qlist_del_init(&rx->mxc_list);
                bnm_q_canceled_ctx(rx, err);
        }
        /* try to cancel pending rxs */
        qlist_for_each_entry_safe(rx, next, &peer->mxp_pending_rxs, mxc_list) {
                uint32_t        result = 0;
                mx_cancel(bmi_mx->bnm_ep, &rx->mxc_mxreq, &result);
                if (result) {
                        qlist_del_init(&rx->mxc_list);
                        bnm_q_canceled_ctx(rx, err);
                }
        }
        gen_mutex_unlock(&peer->mxp_lock);
        if (mx_dis) {
                /* cancel all posted txs and matched rxs */
                mx_disconnect(bmi_mx->bnm_ep, peer->mxp_epa);
        }
        return;
}

static int
BMI_mx_set_info(int option, void *inout_parameter)
{
        struct bmi_method_addr      *map    = NULL;
        struct bnm_method_addr  *mxmap  = NULL;
        struct bnm_peer         *peer   = NULL;

        BNM_ENTER;

        switch(option) {
                case BMI_DROP_ADDR:
                        if (inout_parameter != NULL) {
                                map = (struct bmi_method_addr *) inout_parameter;
                                mxmap = map->method_data;
                                debug(BNM_DB_PEER, "%s drop %s map 0x%p mxmap 0x%p)",
                                                __func__, mxmap->mxm_peername != NULL ?
                                                mxmap->mxm_peername : "NULL", map,
                                                mxmap);
                                if (bmi_mx != NULL) {
                                        peer = mxmap->mxm_peer;
                                        bnm_peer_disconnect(peer, 1, BMI_ENETRESET);
                                }
                                if (mxmap->mxm_peername) {
                                        debug(BNM_DB_MEM, "freeing mxm_peername");
                                        free((void *) mxmap->mxm_peername);
                                        mxmap->mxm_peername = NULL;
                                }
                                if (mxmap->mxm_hostname) {
                                        debug(BNM_DB_MEM, "freeing mxm_hostname");
                                        free((void *) mxmap->mxm_hostname);
                                        mxmap->mxm_hostname = NULL;
                                }
                                debug(BNM_DB_PEER, "freeing map 0x%p", map);
                                free(map);
                        }
                break;
                default:
                        /* XXX: should return -ENOSYS, but 0 now until callers 
                         * handle that correctly. */
                break;
        }
        BNM_EXIT;

        return 0;
}

static int
BMI_mx_get_info(int option, void *inout_parameter)
{
        int     ret     = 0;

        BNM_ENTER;

        switch(option) {
                case BMI_CHECK_MAXSIZE:
                        /* reality is 2^31, but shrink to avoid negative int */
                        *(int *)inout_parameter = (1U << 31) - 1;
                        break;
                case BMI_GET_UNEXP_SIZE:
                        *(int *)inout_parameter = BNM_UNEXPECTED_SIZE;
                        break;
                default:
                        ret = -BMI_ENOSYS;
        }
        BNM_EXIT;

        return ret;
}

#define BNM_IO_BUF      1
#define BNM_UNEX_BUF    2

static void *
bnm_memalloc(bmi_size_t size, int type)
{
        void                    *buf    = NULL;
#if BNM_MEM_TWEAK
        int                     *misses = NULL;
        struct bnm_buffer       *mem    = NULL;
        list_t                  *idle   = NULL;
        list_t                  *used   = NULL;
        gen_mutex_t             *idle_lock  = NULL;
        gen_mutex_t             *used_lock  = NULL;

        if (type == BNM_IO_BUF) {
                idle = &bmi_mx->bnm_idle_buffers;
                used = &bmi_mx->bnm_used_buffers;
                idle_lock = &bmi_mx->bnm_idle_buffers_lock;
                used_lock = &bmi_mx->bnm_used_buffers_lock;
                misses = &bmi_mx->bnm_misses;
        } else if (type == BNM_UNEX_BUF) {
                idle = &bmi_mx->bnm_idle_unex_buffers;
                used = &bmi_mx->bnm_used_unex_buffers;
                idle_lock = &bmi_mx->bnm_idle_unex_buffers_lock;
                used_lock = &bmi_mx->bnm_used_unex_buffers_lock;
                misses = &bmi_mx->bnm_unex_misses;
        } else {
                return NULL;
        }

        gen_mutex_lock(idle_lock);
        if (size <= (BNM_BUFF_SIZE) && !qlist_empty(idle)) {
                mem = qlist_entry(idle->next, struct bnm_buffer, mxb_list);
                qlist_del_init(&mem->mxb_list);
                gen_mutex_unlock(idle_lock);
                buf = mem->mxb_buffer;
                mem->mxb_used++;
                gen_mutex_lock(used_lock);
                qlist_add(&mem->mxb_list, used);
                gen_mutex_unlock(used_lock);
                gen_mutex_lock(idle_lock);
        } else {
                (*misses)++;
                gen_mutex_unlock(idle_lock);
                buf = malloc((size_t) size);
                gen_mutex_lock(idle_lock);
        }
        gen_mutex_unlock(idle_lock);
#else
        buf = malloc((size_t) size);
#endif
        return buf;
}

void *
BMI_mx_memalloc(bmi_size_t size, enum bmi_op_type send_recv)
{
        void                    *buf    = NULL;
        buf = bnm_memalloc(size, BNM_IO_BUF);
        return buf;
}

static int
bnm_memfree(void *buffer, bmi_size_t size, int type)
{
#if BNM_MEM_TWEAK
        int                     found   = 0;
        struct bnm_buffer       *mem    = NULL;
        list_t                  *idle   = NULL;
        list_t                  *used   = NULL;
        gen_mutex_t             *idle_lock  = NULL;
        gen_mutex_t             *used_lock  = NULL;

        if (type == BNM_IO_BUF) {
                idle = &bmi_mx->bnm_idle_buffers;
                used = &bmi_mx->bnm_used_buffers;
                idle_lock = &bmi_mx->bnm_idle_buffers_lock;
                used_lock = &bmi_mx->bnm_used_buffers_lock;
        } else if (type == BNM_UNEX_BUF) {
                idle = &bmi_mx->bnm_idle_unex_buffers;
                used = &bmi_mx->bnm_used_unex_buffers;
                idle_lock = &bmi_mx->bnm_idle_unex_buffers_lock;
                used_lock = &bmi_mx->bnm_used_unex_buffers_lock;
        } else {
                return -1;
        }

        gen_mutex_lock(used_lock);
        qlist_for_each_entry(mem, used, mxb_list) {
                if (mem->mxb_buffer == buffer) {
                        found = 1;
                        qlist_del_init(&mem->mxb_list);
                        gen_mutex_unlock(used_lock);
                        gen_mutex_lock(idle_lock);
                        qlist_add(&mem->mxb_list, idle);
                        gen_mutex_unlock(idle_lock);
                        gen_mutex_lock(used_lock);
                        break;
                }
        }
        gen_mutex_unlock(used_lock);

        if (found == 0) {
                free(buffer);
        }
#else
        free(buffer);
#endif
        return 0;
}

static int
BMI_mx_memfree(void *buffer, bmi_size_t size, enum bmi_op_type send_recv)
{
        int     ret     = 0;
        ret = bnm_memfree(buffer, size, BNM_IO_BUF);
        return ret;
}

static int
BMI_mx_unexpected_free(void *buf)
{
        int     ret     = 0;

        BNM_ENTER;

        ret = bnm_memfree(buf, BNM_UNEXPECTED_SIZE, BNM_UNEX_BUF);

        BNM_EXIT;

        return 0;
}

static void
bnm_parse_match(uint64_t match, uint8_t *type, uint32_t *id, uint32_t *tag)
{
        *type   = (uint8_t)  (match >> BNM_MSG_SHIFT);
        *id     = (uint32_t) ((match >> BNM_ID_SHIFT) & BNM_MAX_PEER_ID); /* 20 bits */
        *tag    = (uint32_t) (match & BNM_MAX_TAG); /* 32 bits */
        return;
}

static void
bnm_create_match(struct bnm_ctx *ctx)
{
        int             connect = 0;
        uint64_t        type    = (uint64_t) ctx->mxc_msg_type;
        uint64_t        id      = 0ULL;
        uint64_t        tag     = (uint64_t) ctx->mxc_tag;

        if (ctx->mxc_msg_type == BNM_MSG_CONN_REQ || 
            ctx->mxc_msg_type == BNM_MSG_CONN_ACK) {
                connect = 1;
        }

        if ((ctx->mxc_type == BNM_REQ_TX && connect == 0) ||
            (ctx->mxc_type == BNM_REQ_RX && connect == 1)) {
                id = (uint64_t) ctx->mxc_peer->mxp_tx_id;
        } else if ((ctx->mxc_type == BNM_REQ_TX && connect == 1) ||
                   (ctx->mxc_type == BNM_REQ_RX && connect == 0)) {
                id = (uint64_t) ctx->mxc_peer->mxp_rx_id;
        } else {
                debug(BNM_DB_INFO, "create_match() for %s called with "
                                "connect = %d", ctx->mxc_type == BNM_REQ_TX ?
                                "TX" : "RX", connect);
        }
        
        if ((id >> 20) != 0) {
                debug(BNM_DB_ERR, "invalid %s of %llu\n", ctx->mxc_type == BNM_REQ_TX ?
                        "mxp_tx_id" : "mxp_rx_id", (unsigned long long) id);
                exit(1);
        }

        ctx->mxc_match = (type << BNM_MSG_SHIFT) | (id << BNM_ID_SHIFT) | tag;

        return;
}

static bmi_error_code_t
bnm_mx_to_bmi_errno(enum mx_status_code code)
{
        int     err     = 0;

        switch (code) {
        case MX_STATUS_SUCCESS:
                err = 0;
                break;
        case MX_STATUS_TIMEOUT:
                err = BMI_ETIMEDOUT;
                break;
        case MX_STATUS_ENDPOINT_CLOSED:
        case MX_STATUS_BAD_SESSION:
        case MX_STATUS_BAD_KEY:
        case MX_STATUS_BAD_ENDPOINT:
                err = BMI_ECONNREFUSED;
                break;
        case MX_STATUS_ENDPOINT_UNREACHABLE:
                err = BMI_ENETRESET;
                break;
        case MX_STATUS_NO_RESOURCES:
        case MX_STATUS_EVENTQ_FULL:
                err = BMI_ENOMEM;
                break;
        default:
                debug(BNM_DB_WARN, "request status is %s", mx_strstatus(code));
                err = BMI_EIO;
                break;
        }
        return -err;
}

/* if (peer->mxp_state == BNM_PEER_READY)
 *     add to pending list
 *     add refcount on peer
 *     mx_isend()
 * else
 *     add to peer's queued txs
 */
static int
bnm_post_tx(struct bnm_ctx *tx)
{
        int             ret     = 0;
        struct bnm_peer *peer   = tx->mxc_peer;
        mx_return_t     mxret   = MX_SUCCESS;
        mx_segment_t    *segs   = NULL;

        debug((BNM_DB_FUNC|BNM_DB_CTX), "entering %s match= 0x%llx length= %lld "
                        "peer state= %d op_id= %llu", __func__, llu(tx->mxc_match), 
                        lld(tx->mxc_nob), peer->mxp_state, llu(tx->mxc_mop->op_id));
        if (peer->mxp_state == BNM_PEER_READY) {
                bnm_q_pending_ctx(tx);  /* uses peer lock */
                if (tx->mxc_nseg == 1) {
                        segs = &tx->mxc_seg;
                } else {
                        segs = tx->mxc_seg_list;
                }
                mxret = mx_isend(bmi_mx->bnm_ep, segs, tx->mxc_nseg, peer->mxp_epa,
                                 tx->mxc_match, (void *) tx, &tx->mxc_mxreq);
                if (mxret != MX_SUCCESS) {
                        ret = -BMI_ENOMEM;
                        bnm_deq_pending_ctx(tx);        /* uses peer lock */
                        bnm_q_canceled_ctx(tx, BMI_ENOMEM);
                }
        } else { /* peer is not ready */
                debug(BNM_DB_PEER, "%s peer is not ready (%d) q_ctx(tx) "
                                "match= 0x%llx length=%lld", __func__, peer->mxp_state,
                                llu(tx->mxc_match), lld(tx->mxc_nob));
                bnm_q_ctx(tx);  /* uses peer lock */
        }
        BNM_EXIT;
        return ret;
}

static int
bnm_ensure_connected(struct bnm_method_addr *mxmap)
{
        int             ret     = 0;
        struct bnm_peer *peer   = mxmap->mxm_peer;

        /* NOTE: can this happen? we call peer_alloc() when using 
         * method_addr_lookup() */
        if (peer == NULL) {
                ret = bnm_peer_alloc(&peer, mxmap);
                if (ret != 0) {
                        debug((BNM_DB_CONN|BNM_DB_MEM), "%s could not allocate peer for %s",
                                        __func__, mxmap->mxm_peername);
                        goto out;
                }
        }
        if (peer->mxp_state == BNM_PEER_INIT) {
                debug(BNM_DB_CONN, "%s calling bnm_peer_connect() for %s",
                                        __func__, mxmap->mxm_peername);
                ret = bnm_peer_connect(peer);
        } else if (peer->mxp_state == BNM_PEER_DISCONNECT) {
                debug(BNM_DB_CONN, "%s %s is not connected", __func__, mxmap->mxm_peername);
                ret = -BMI_EHOSTDOWN;
        }
out:
        return ret;
}

static int
bnm_post_send_common(bmi_op_id_t *id, struct bmi_method_addr *remote_map,
                     int numbufs, const void *const *buffers, 
                     const bmi_size_t *sizes, bmi_size_t total_size, 
                     bmi_msg_tag_t tag, void *user_ptr,
                     bmi_context_id context_id, int is_unexpected,
                     PVFS_hint hints)
{
        struct bnm_ctx          *tx     = NULL;
        struct method_op        *mop    = NULL;
        struct bnm_method_addr  *mxmap  = NULL;
        struct bnm_peer         *peer   = NULL;
        int                      ret    = 0;
        PINT_event_id            eid    = 0;

        mxmap = remote_map->method_data;

        ret = bnm_ensure_connected(mxmap);
        if (ret != 0) {
                goto out;
        }
        peer = mxmap->mxm_peer;
        bnm_peer_addref(peer); /* add ref and hold until test or testcontext */

        /* get idle tx, if available, otherwise alloc one */
        tx = bnm_get_idle_tx();
        if (tx == NULL) {
                ret = bnm_ctx_alloc(&tx, BNM_REQ_TX);
                if (ret != 0) {
                        ret = -BMI_ENOMEM;
                        bnm_peer_decref(peer);
                        goto out;
                }
                tx->mxc_state = BNM_CTX_PREP;
        }

        /* map buffer(s) */
        if (numbufs == 1) {
                tx->mxc_seg.segment_ptr = (void *) *buffers;
                tx->mxc_seg.segment_length = *sizes;
                tx->mxc_nob = *sizes;
        } else {
                int             i       = 0;
                mx_segment_t    *segs   = NULL;

                BNM_MALLOC(segs, (numbufs * sizeof(*segs)));
                if (segs == NULL) {
                        bnm_put_idle_tx(tx);
                        bnm_peer_decref(peer);
                        ret = -BMI_ENOMEM;
                        goto out;
                }
                tx->mxc_seg_list = segs;
                for (i = 0; i < numbufs; i++) {
                        segs[i].segment_ptr = (void *) buffers[i];
                        segs[i].segment_length = sizes[i];
                        tx->mxc_nob += sizes[i];
                }
        }
        tx->mxc_nseg = numbufs;

        if (tx->mxc_nob != total_size) {
                debug(BNM_DB_INFO, "user provided total length %lld does not match "
                                "the buffer list total length %lld", lld(total_size), 
                                lld(tx->mxc_nob));
        }

        if (is_unexpected && tx->mxc_nob > (long long) BNM_UNEXPECTED_SIZE) {
                bnm_put_idle_tx(tx);
                bnm_peer_decref(peer);
                ret = -BMI_EINVAL;
                goto out;
        }

        tx->mxc_tag = tag;
        tx->mxc_peer = peer;
        if (!is_unexpected) {
                tx->mxc_msg_type = BNM_MSG_EXPECTED;
        } else {
                tx->mxc_msg_type = BNM_MSG_UNEXPECTED;
        }

        BNM_MALLOC(mop, sizeof(*mop));
        if (mop == NULL) {
                bnm_put_idle_tx(tx);
                bnm_peer_decref(peer);
                ret = -BMI_ENOMEM;
                goto out;
        }
        id_gen_fast_register(&mop->op_id, mop);
        debug(BNM_DB_CTX, "TX id_gen_fast_register(%llu)", llu(mop->op_id));
        mop->addr = remote_map;  /* set of function pointers, essentially */
        mop->method_data = tx;
        mop->user_ptr = user_ptr;
        mop->context_id = context_id;
        mop->event_id = eid;
        *id = mop->op_id;
        tx->mxc_mop = mop;

        bnm_create_match(tx);

        debug(BNM_DB_CTX, "%s tag= %d length= %d %s op_id= %llu", __func__, tag,
                        (int) total_size, is_unexpected ? "UNEXPECTED" : "EXPECTED",
                        llu(mop->op_id));

        ret = bnm_post_tx(tx);

out:
        return ret;
}

