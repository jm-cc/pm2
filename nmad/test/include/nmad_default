compile_leonie()
{
    x=$(pm2-flavor get --flavor=leonie 2>/dev/null)
    if [ "$x" == "" ] ; then
        pm2-create-sample-flavors leonie
    fi
    LEONIE_DIR=$(pm2-config --flavor=leonie --bindir leonie 2>/dev/null)
    if [ ! -x "$LEONIE_DIR"/leonie ] ; then
        make FLAVOR=leonie -C $PM2_ROOT/modules/leonie | sed -e 's/^/..../'
        LEONIE_DIR=$(pm2-config --flavor=leonie --bindir leonie 2>/dev/null)
        if [ ! -x "$LEONIE_DIR"/leonie ] ; then
            echo "Could not compile leonie. Aborting"
            exit 1
        fi
    fi
}

# Creation de la flavor
if [ "${ext}" == "pioman" ] ; then
    eval ${PM2_ROOT}/bin/pm2-flavor set --flavor=\"$flavor\" \
	--ext=\"\" \
	--modules=\"puk nmad tbx ntbx init pioman marcel\" \
	--init=\"debug gdb\" \
	--nmad=\"debug gdb ${net} sched_opt ${strat} ${mpi} mad3_emu\" \
	--ntbx=\"debug gdb\" \
	--tbx=\"debug gdb\" \
	--puk=\"disable_output\" \
	--marcel=\"debug mono marcel_main\" \
	--common=\"debug gdb fortran_target_none\" \
	--all=\"build_static\"
else
    eval ${PM2_ROOT}/bin/pm2-flavor set --flavor=\"$flavor\" \
	--ext=\"\" \
	--modules=\"puk nmad tbx ntbx init \" \
	--init=\"debug gdb\" \
	--nmad=\"debug gdb ${net} sched_opt ${strat} ${mpi} mad3_emu\" \
	--ntbx=\"debug gdb\" \
	--tbx=\"debug gdb\" \
	--puk=\"disable_output\" \
	--common=\"debug gdb fortran_target_none\" \
	--all=\"build_static\"
fi
nmad-driver-conf -f --${net}
nmad-strategy-conf -f --strategy=${strat}
# should compare all the lines of the output and not only the number
# of lines present in the expected output file
check_all_lines=1
