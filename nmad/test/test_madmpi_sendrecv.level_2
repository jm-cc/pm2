# Configuration
hosts=${TESTCONFIG:-"localhost localhost"}
net=${TESTNET:-tcp}
mpi="mpi_emu"
strat="strat_default"
net2=$(echo $net | tr ' ' '_')
flavor="test_nmad_${mpi}_${net2}"

appdir="${PM2_ROOT}/nmad/examples/mpi/basics"
prog="sendrecv"
args="--x --p --l"
sort_output=1

rm -f /tmp/pm2test_"${USER}"_expected
nb_hosts=$(echo $hosts | wc -w)
ranks=$(expr $nb_hosts - 1)
(for f in $(seq 0 2 $ranks) ; do
    echo "[$f] The answer to life, the universe, and everything is 42"
    echo "[$f] The estimated value of PI is 3.141500"
done) > /tmp/pm2test_"${USER}"_expected

. ./include/nmad_default

