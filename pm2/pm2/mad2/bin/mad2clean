# Just in case MAD2_ROOT is not defined
MAD2_ROOT=${MAD2_ROOT-${PM2_ROOT}/mad2}
export MAD2_ROOT

if test $# -gt 0
then
    ARCH=$*
else
    ARCH=`cat ${MAD2_ROOT}/ARCHITECTURES`
fi

echo Cleaning MADELEINE II:
for i in $ARCH
do
	echo $i

	# librairies 
	for f in ${MAD2_ROOT}/lib/$i/lib*
	do
	    if [ -f $f ]
	    then
		echo "  deleting $f"
		rm -f $f 
	    fi
	done
	# objets "source"
	for f in ${MAD2_ROOT}/obj/$i/*.o
	do
	    if [ -f $f ]
	    then
		echo "  deleting $f"
		rm -f $f 
	    fi
	done
	
	# librairies 
	# if [ -f ${MAD2_ROOT}/lib/$i/lib* ]; then 
	#    for f in `ls ${MAD2_ROOT}/lib/$i/lib*`
	#    do
	#	echo "  deleting $f"
	#	rm -f $f 
	#    done
	# fi
	# objets "source"
	# if [ -f ${MAD2_ROOT}/obj/$i/*.o ]; then 
	#    for f in `ls ${MAD2_ROOT}/obj/$i/*.o`
	#    do
	#	echo "  deleting $f"
	#	rm -f $f 
	#    done
	# fi
	# exemples
	# for f in `ls ${MAD2_ROOT}/examples/obj/$i`
	# do
	# 	echo "	deleting ${MAD2_ROOT}/examples/obj/$i/$f"
	#	rm ${MAD2_ROOT}/examples/obj/$i/$f
	# done
	# for f in `ls ${MAD2_ROOT}/examples/bin/$i`
	# do
	#	echo "	deleting ${MAD2_ROOT}/examples/bin/$i/$f"
	#	rm ${MAD2_ROOT}/examples/bin/$i/$f
	# done
done
