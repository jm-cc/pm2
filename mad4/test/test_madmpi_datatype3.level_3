# Configuration
hosts=${TESTCONFIG:-"localhost localhost"}
net=${TESTNET:-tcp}
mpi="mpi_emu"
strat="strat_default"
flavor="test_mad4_${mpi}_${net}_${strat}"

appdir="${PM2_ROOT}/nmad/examples/mpi/basics"
prog="datatype3"
args="--x --p --l"

nb_hosts=$(echo $hosts | wc -w)
moitie=$(expr $nb_hosts / 2)
(for f in $(seq 1 $moitie) ; do
    echo "Success"
done) > /tmp/pm2test_"${USER}"_expected

. ./include/mad4_default

# Verification et compilation du lanceur leonie
compile_leonie
