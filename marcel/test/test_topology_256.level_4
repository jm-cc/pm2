. ./common.sh
topology_chroot="/soft/common/topology-chroot/strange1-subdudley"
flavor="marcel-topology-256"
prog="read-topology"
args="-v --marcel-topology-fsys-root $topology_chroot"

if [ -d $topology_chroot ] ; then
    cp ${topology_chroot}/output /tmp/pm2test_"${USER}"_expected
else
    echo Warning: topology $topology_chroot not available >&2
    pm2_skip_test
fi

# Creation de la flavor
create_test_flavor() {
    # Create the flavor if needed
    flavor_exists=$($SSH pm2-flavor get --flavor=$flavor 2>/dev/null)
    if [ -z "$flavor_exists" ] ; then
        $SSH pm2-create-sample-flavors $flavor
    fi
}
