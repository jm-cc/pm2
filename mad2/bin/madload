# General Public License for more details.

prog="$1"
shift

# Note: PM2_CONF_FILE is inherited
host=`head -1 ${PM2_CONF_FILE}`

args=""
while [ $# -gt 0 ]; do
    args="$args '$1'"
    shift
done

# The first node has rank 0
args="$args --mad-rank 0"

# Append the command name
if [ -n "$PM2_CMD_NAME" ]; then
    if [ "$PM2_USE_LOCAL_FLAVOR" != on ]; then
	args="$args --mad-app-cmd $PM2_CMD_NAME"
    fi
else
    args="$args --mad-app-cmd $prog"
fi

PM2_RSH=${PM2_RSH:-rsh} 

cmd="PM2_RSH='${PM2_RSH}';export PM2_RSH;\
     PM2_CMDLINE='${PM2_CMDLINE}';export PM2_CMDLINE;\
     $prog $args"

case $host in
    localhost|`hostname`)
	/bin/sh -c "$cmd"
	;;
    *)
	${PM2_RSH} $host /bin/sh -c \""$cmd"\"
	;;
esac
