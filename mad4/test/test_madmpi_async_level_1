compile_leonie()
{
    LEONIE_DIR=$(pm2-config --flavor=leonie --bindir leonie 2>/dev/null)
    if [ ! -x "$LEONIE_DIR"/leonie ] ; then
        make FLAVOR=leonie -C $PM2_ROOT/modules/leonie
        LEONIE_DIR=$(pm2-config --flavor=leonie --bindir leonie 2>/dev/null)
        if [ ! -x "$LEONIE_DIR"/leonie ] ; then
            echo "Could not compile leonie. Aborting"
            exit 1
        fi
    fi
}

# Verification et compilation du lanceur leonie
compile_leonie

# Configuration
flavor="test_mad4_mpi"
appdir="${PM2_ROOT}/nmad/examples/mpi/basics"
prog="async"
args="--x --p --l"
hosts=${TESTCONFIG:-"william averell"}
nb_hosts=$(echo $hosts | wc -w)
nb_hosts2=$(echo $nb_hosts -1 | bc)
net=${TESTNET:-mx}
rm -f /tmp/pm2test_"${USER}"_expected

(cat <<EOF
Null request
The answer to life, the universe, and everything is 42
There are 7 Wonders of the World
EOF
) > /tmp/pm2test_"${USER}"_expected

# Creation de la flavor
eval ${PM2_ROOT}/bin/pm2-flavor set --flavor=\"$flavor\" \
 --ext=\"\" \
 --modules=\"mad4 tbx ntbx init\" \
 --init=\"debug gdb\" \
 --mad4=\"debug gdb ${net} sched_opt strat_aggreg mpi_emu mad3_emu\" \
 --ntbx=\"debug gdb\" \
 --tbx=\"debug gdb\" \
 --common=\"debug gdb\" \
 --all=\"build_static\"

