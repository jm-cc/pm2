# args: loop variable
initialize_bench()
{
    eval ${PM2_OBJROOT}/bin/pm2-flavor set --flavor=\"$flavor\" \
	--modules=\"marcel tbx init memory puk\" \
	--marcel=numa --marcel=enable_stats --marcel=standard_main --marcel=smp_smt_idle --marcel=enable_mami \
        --puk=enable_pukabi --puk=disable_fd_virtualization \
	--init=topology \
        --all=\"opt build_static static\"
    ${PM2_OBJROOT}/bin/pm2-conf -f $flavor $hosts
}

# args: -
run_bench()
{
    # wait for NFS to propagate the new compiled program
    sleep 10

    ${PM2_OBJROOT}/bin/pm2-load -f $flavor $prog $args
}

# args: loop variable
finalize_bench()
{
    file_result="/tmp/pm2_bench_${prog}_${USER}_result"
    if [ "$BENCHDIR" != "" ] && [ -d $BENCHDIR ] ; then
        cp $file_result $BENCHDIR
    fi
}

hosts=${BENCHHOST:-"localhost"}
flavor="bench_memory_mami_${hosts}"
appdir="${PM2_OBJROOT}/memory/examples"
loop="memory"

prog="mami_bench"
args="1000000"


