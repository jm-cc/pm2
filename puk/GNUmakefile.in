# module: puk

PM2_ROOT    := @abs_top_srcdir@
PM2_SRCROOT := @abs_top_srcdir@
PM2_OBJROOT := @abs_top_builddir@
export PM2_ROOT PM2_SRCROOT PM2_OBJROOT

include $(PM2_OBJROOT)/make/common-vars.mak

pm2_build_dir := $(shell $(PM2_OBJROOT)/bin/pm2-config --flavor=$(FLAVOR) --builddir)

PADICO_ROOT     := $(pm2_build_dir)/
PADICO_SRCDIR   := @abs_srcdir@/../padicotm/externals/PadicoTM
PADICO_BUILDDIR := $(PADICO_ROOT)/build/PadicoTM

PADICO_CONFIG_FILES := \
  $(PADICO_SRCDIR)/configure \
  $(PADICO_SRCDIR)/Puk/padico_config.h.in \
  $(PADICO_SRCDIR)/../../VERSION

# ## configure options
# ##


PUK_ENABLE_PUKABI         := $(shell $(PM2_OBJROOT)/bin/pm2-config --flavor=$(FLAVOR) --getvar=PM2_PUK_ENABLE_PUKABI)
PUK_CONFIGURE_EXTRA_FLAGS := $(shell $(PM2_OBJROOT)/bin/pm2-config --flavor=$(FLAVOR) --getvar=PM2_PUK_CONFIGURE_EXTRA_FLAGS)

PUK_LIBS = $(PADICO_ROOT)/lib/libPadicoPuk.so

ifeq ($(PUK_ENABLE_PUKABI),yes)
  PUK_LIBS += $(PADICO_ROOT)/lib/PukABI/libPukABI.so
endif

# ## front-end rules
# ##


libs: $(PUK_LIBS)

link:

dot_h: $(PUK_LIBS)

flavormaks:


# ## configure
# ##

$(PADICO_BUILDDIR)/config.status:
	-@mkdir -p $(PADICO_BUILDDIR)
	-@mkdir -p $(PADICO_ROOT)/opt
	-ln -s $(PM2_SRCROOT) $(PADICO_ROOT)/opt/pm2
	-@mkdir -p $(PADICO_ROOT)/build/opt
	-ln -s $(PM2_OBJROOT) $(PADICO_ROOT)/build/opt/pm2
	-@echo "   configuring PadicoTM"
	( cd $(PADICO_BUILDDIR) ; \
           $(PADICO_SRCDIR)/configure LIBS= LDFLAGS= CFLAGS= --prefix=$(PADICO_ROOT) $(PUK_CONFIGURE_EXTRA_FLAGS) )

# ## build
# ##

$(PADICO_BUILDDIR)/Puk/libPadicoPuk.so: $(PADICO_BUILDDIR)/config.status
	$(MAKE) PADICO_ROOT=$(PADICO_ROOT) -C $(PADICO_BUILDDIR)/

$(PADICO_BUILDDIR)/PukABI/libPukABI.so: $(PADICO_BUILDDIR)/config.status
	$(MAKE) PADICO_ROOT=$(PADICO_ROOT) -C $(PADICO_BUILDDIR)/PukABI

# ## install
# ##

$(PUK_LIBS): $(PADICO_BUILDDIR)/Puk/libPadicoPuk.so
	$(MAKE) PADICO_ROOT=$(PADICO_ROOT) -C $(PADICO_BUILDDIR) install
	@touch $(PUK_LIBS)
	-ln -s $(PADICO_ROOT)/lib/PukABI/libPukABI.so $(PADICO_ROOT)/lib/libPukABI.so




