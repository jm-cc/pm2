# Configuration
hosts=${TESTCONFIG:-"localhost localhost"}
net=${TESTNET:-tcp}
mpi="mpi_emu"
strat="strat_aggreg_extended"
flavor="test_mad4_${mpi}_${net}_${strat}"
sort_output=1

appdir="${PM2_ROOT}/nmad/examples/mpi/basics"
prog="extended"
args="--x --p --l"
sort_output=1

rm -f /tmp/pm2test_"${USER}"_expected
nb=$(expr $(echo $hosts | wc -w) / 2)
(
for f in $(seq 1 $nb) ; do
    echo "The answer to life, the universe, and everything is 42"
done
for f in $(seq 1 $nb) ; do
    echo "There are 7 Wonders of the World"
done
) > /tmp/pm2test_"${USER}"_expected

. ./include/mad4_default

# Verification et compilation du lanceur leonie
compile_leonie
