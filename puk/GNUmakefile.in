PM2_ROOT := @abs_top_srcdir@
PM2_SRCROOT := @abs_top_srcdir@
PM2_OBJROOT := @abs_top_builddir@
export PM2_ROOT PM2_SRCROOT PM2_OBJROOT

include $(PM2_OBJROOT)/make/common-vars.mak

pm2_build_dir  := $(shell $(PM2_OBJROOT)/bin/pm2-config --flavor=$(FLAVOR) --builddir)
PUK_ROOT       := $(pm2_build_dir)/puk
PUK_SRCDIR     := @abs_srcdir@
PUK_BUILDDIR   := $(PUK_ROOT)/build
PUK_INSTALLDIR := $(PUK_ROOT)

PADICO_ROOT    := $(PUK_ROOT)

PUK_CONFIG_FILES := \
  $(PUK_SRCDIR)/externals/packaging-tools/padico-init \
  $(PUK_SRCDIR)/externals/packaging-tools/padico-setup.sh.in \
  $(PUK_SRCDIR)/externals/configure \
  $(PUK_SRCDIR)/externals/Puk/padico_config.h.in \
  $(PUK_SRCDIR)/VERSION

PM2_PUK_BUILD_STATIC  := $(shell $(PM2_OBJROOT)/bin/pm2-config --flavor=$(FLAVOR) --getvar=PM2_PUK_BUILD_STATIC)
PM2_PUK_BUILD_DYNAMIC := $(shell $(PM2_OBJROOT)/bin/pm2-config --flavor=$(FLAVOR) --getvar=PM2_PUK_BUILD_DYNAMIC)
PUK_ENABLE_PUKABI     := $(shell $(PM2_OBJROOT)/bin/pm2-config --flavor=$(FLAVOR) --getvar=PM2_PUK_ENABLE_PUKABI)

PUK_LIBS = 
ifeq ($(PM2_PUK_BUILD_STATIC),yes)
PUK_LIBS += $(PADICO_ROOT)/lib/libPadicoPuk.a
endif
ifeq ($(PM2_PUK_BUILD_DYNAMIC),yes)
PUK_LIBS += $(PADICO_ROOT)/lib/libPadicoPuk.so
endif
ifeq ($(PUK_ENABLE_PUKABI),yes)
  PUK_LIBS += $(PADICO_ROOT)/lib/PukABI/libPukABI.so
endif


# ## front-end rules
# ##


libs: $(PADICO_ROOT)/lib/libPadicoPuk.a
	@cp $(PUK_LIBS) $(pm2_build_dir)/lib/

link:

dot_h: $(PADICO_ROOT)/lib/libPadicoPuk.a

clean:
	-rm -r $(PUK_ROOT)/puk

flavormaks: $(PADICO_ROOT)/etc/padico-setup.sh


# ## packaging and directories
# ##

$(PADICO_ROOT)/etc/padico-setup.sh: $(PUK_CONFIG_FILES)
	@echo "    installing Padico packaging tools in PADICO_ROOT=$(PADICO_ROOT)"
	@echo
	@$(PUK_SRCDIR)/externals/packaging-tools/padico-init \
          admindir=$(PUK_SRCDIR)/externals/packaging-tools \
          installdir=$(PADICO_ROOT) \
          srcdir=$(PUK_SRCDIR) \
          builddir=$(PUK_BUILDDIR) \
          logdir=$(PUK_BUILDDIR)/log \
          padico_dialog=whiptail
	-@mkdir $(PUK_BUILDDIR)
	-@mkdir $(pm2_build_dir)/lib/

# ## configure
# ##

PM2_PUK_CONFIGURE_EXTRA_FLAGS := $(shell $(PM2_OBJROOT)/bin/pm2-config --flavor=$(FLAVOR) --getvar=PM2_PUK_CONFIGURE_EXTRA_FLAGS)

$(PUK_BUILDDIR)/config.status: $(PADICO_ROOT)/etc/padico-setup.sh
	-@echo "   configuring Puk"
	( cd $(PUK_BUILDDIR) ; \
           $(PUK_SRCDIR)/externals/configure LIBS= LDFLAGS= CFLAGS= --prefix=$(PUK_INSTALLDIR) $(PM2_PUK_CONFIGURE_EXTRA_FLAGS) )

# ## build
# ##

$(PUK_BUILDDIR)/Puk/libPadicoPuk.a: $(PUK_BUILDDIR)/config.status
	$(MAKE) PADICO_ROOT=$(PADICO_ROOT) -C $(PUK_BUILDDIR)/Puk

# ## build
# ##

check: $(PUK_BUILDDIR)/Puk/libPadicoPuk.a

# ## install
# ##

$(PADICO_ROOT)/lib/libPadicoPuk.a: $(PUK_BUILDDIR)/Puk/libPadicoPuk.a
	$(MAKE) PADICO_ROOT=$(PADICO_ROOT) -C $(PUK_BUILDDIR)/Puk install
	@touch $(PADICO_ROOT)/lib/libPadicoPuk.a


