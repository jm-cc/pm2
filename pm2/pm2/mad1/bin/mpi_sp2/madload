# Just in case MADELEINE_ROOT is not defined
MADELEINE_ROOT=${MADELEINE_ROOT-${PM2_ROOT}/mad1}
export MADELEINE_ROOT

case $1 in
    /*) command=$* ;;
    *) command=`pwd`/$*
esac

#poe $MADELEINE_ROOT/.madconf

set `cat $MADELEINE_ROOT/.madconf`
nb_hosts=$#

set $command
prog=$1
shift

poe $prog $* -hfile $MADELEINE_ROOT/.madconf -procs $nb_hosts -adapter_use dedicated -euidevice css0 -euilib us

