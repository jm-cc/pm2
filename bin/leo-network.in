cfgfile=$1
dev=$2
shift 2
list=${@:+"$@"}

nets=`cat $cfgfile | tr -d ' \n\t' | cut -d ':' -f '2-' | sed -e 's/},{/ /g' | sed -e 's/({//g' | sed -e 's/});//g'`

oldifs=$IFS

while 
    [ -n "$nets" ]
do
    set $nets
    net=$1
    shift
    nets=${@:+"$@"}
    # echo $net

    IFS=';'
    set $net
    IFS=$oldifs

    fields=${@:+"$@"}

    while 
	[ -n "$fields" ]
    do	
	set $fields

	field=$1
	shift
	fields=${@:+"$@"}

	IFS=':'
	set $field
	IFS=$oldifs

	case $1 in
	    name)
		net_name=$2
		;;
	    hosts)
		net_hosts=`echo $2|sed -e 's/[()]//g'`
		;;
	    dev)
		net_dev=$2
		;;
	    *)
		;;
	esac
	
    done

#    echo "net: ${net_name}, hosts: ${net_hosts}, dev: ${net_dev}"
    [ $dev \= $net_dev ] || continue
    
    tmp_list=$list
    IFS=','
    set $net_hosts
    IFS=$oldifs
    net_hosts=${@:+"$@"}

    while
	[ -n "$tmp_list" ]
    do
	set $tmp_list
	host=$1
	shift
	tmp_list=${@:+"$@"}

	for net_host in $net_hosts
	do
	    [ $net_host \= $host ] && continue 2
	done

	continue 2	
    done

    echo $net_name && exit 0

done
echo "Network not found" && exit 1


