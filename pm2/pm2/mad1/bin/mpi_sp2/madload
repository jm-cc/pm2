# Just in case MAD1_ROOT is not defined
MAD1_ROOT=${MAD1_ROOT-${PM2_ROOT}/mad1}
export MAD1_ROOT

case $1 in
    /*) command=$* ;;
    *) command=`pwd`/$*
esac

#poe $MAD1_ROOT/.madconf

set `cat $MAD1_ROOT/.madconf`
nb_hosts=$#

set $command
prog=$1
shift

poe $prog $* -hfile $MAD1_ROOT/.madconf -procs $nb_hosts -adapter_use dedicated -euidevice css0 -euilib us

