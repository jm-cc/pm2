DIRS="${MADELEINE_ROOT}/make ${MADELEINE_ROOT}/source ${MADELEINE_ROOT}/bin"

for d in $DIRS ; do
    if [ ! -h $d/custom -a -d $d/custom ] ; then
	echo "ATTENTION: Verifiez votre installation."
	echo "$d/custom ne doit pas etre un répertoire, mais un lien symbolique !"
	exit 1
    fi
done

if test $# -ge 1
then

    if test $# -ne 1
    then
	echo "Usage: $0 custom <packagename>"
	echo "          where packagename can be pvm, tcp, mpi-lam, bip, etc."
	echo "          to build the specified implementation"
	exit 1
    fi

    rm -f ${MADELEINE_ROOT}/.net_interf

    for d in $DIRS
    do
	cd $d
	if test -d $1
	then
	    rm -f custom
	    ln -fs $1 custom
	else
	    echo "Error: $d/$1 is not a directory"
	    exit 1
	fi
    done
    echo $1 > ${MADELEINE_ROOT}/.net_interf

    touch ${MADELEINE_ROOT}/source/*.c ${MADELEINE_ROOT}/source/custom/*.c
fi

for d in $DIRS ; do
    if [ ! -h $d/custom ] ; then
	echo "ATTENTION: Verifiez votre installation."
	echo "Il faut executer $0 <protocol> au moins une fois"
	exit 1
    fi
done

if test -f ${MADELEINE_ROOT}/.net_interf
then
    echo "The current network interface is set to:" `cat ${MADELEINE_ROOT}/.net_interf`
else
    echo "No current network interface"
fi

exit 0
