_PM2_CONF_FILE_PROGNAME=pm2-conf-file

pm2_conf_file_usage() # exit_code
{
    cat <<EOF
Usage: $_PM2_CONF_FILE_PROGNAME { option }
  option:
    -f|--flavor <name> : Use flavor "name" (default=\$PM2_FLAVOR or default)
    -h                 : Display this help message
EOF
    exit $1
}

pm2_conf_file_parse_cmdline()
{
    while [ $# -gt 0 ]; do
	case $1 in
	    -f|--flavor)
		shift; PM2_FLAVOR="$1"; shift
		;;
	    -h)
		pm2_conf_file_usage 0
		;;
	    --)
		shift; break
		;;
	    *)
		break
		;;
	esac
    done

    [ $# -eq 0 ] || pm2_conf_file_usage 1

    PM2_CONF_FILE=${PM2_CONF_DIR:-${PM2_HOME:-${HOME}}/.pm2}/conf/${PM2_FLAVOR:-default}/.pm2_conf
    export PM2_CONF_FILE
}

# Programme principal

PM2_FLAVOR=${PM2_FLAVOR:-default}
export PM2_FLAVOR

if [ "$1" = --source-mode ]; then
    shift
    pm2_conf_file_parse_cmdline $*
else
    pm2_conf_file_parse_cmdline $*
    echo $PM2_CONF_FILE
    exit 0
fi

