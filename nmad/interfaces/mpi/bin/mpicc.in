CC="@CC@"
CFLAGS="@NMAD_CFLAGS@"
LIBS="@NMAD_LIBS@ -lmadmpi"

case "$1" in
    "-showme")
	shift
	echo "${CC} ${CFLAGS} ${@} ${LIBS}"
	;;
    "-showme:compile")
	echo "${CFLAGS}"
	;;
    "-showme:link")
	echo "${LIBS}"
	;;
    "-compile_info")
	echo "${CC} ${CFLAGS}"
	;;
    "-link_info")
	echo "${CC} ${LIBS}"
	;;
    *)
	exec ${CC} ${CFLAGS} ${@} ${LIBS}
	;;
esac

