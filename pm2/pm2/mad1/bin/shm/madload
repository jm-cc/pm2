nomore=0
MAD_DEBUG=off
MAD_CONSOLE=no
while [ $# -ge 1 -a $nomore = 0 ]; do
	case "$1" in
	-debug) MAD_DEBUG=on; shift;;
	-console) MAD_CONSOLE=pm2; shift;;
	-xconsole) MAD_CONSOLE=xpm2; shift;;
	-*) echo "Usage: $0 [ -debug | -console ] <execname> [ <arg1> ... <argn> ]"; exit 1 ;;
	*) nomore=1;;
	esac
done

if test $# -lt 1
then
	echo "Usage: $0 [ -debug | -console ] <execname> [ <arg1> ... <argn> ]"
	exit 1
fi

if test ! -f ${MADELEINE_ROOT}/.madconf
then
	echo "ERROR: madconf should be runned before $0..."
	exit 1
fi

case $1 in
    /*) command=$* ;;
    *) command=`pwd`/$*
esac

if test ! $MAD_CONSOLE = "no"
then
    set $command
    prog=$1
    shift
    args=$*
    command="$prog -pm2cons $MAD_CONSOLE $args"
fi

case _$DISPLAY in
    _) DISPLAY=`uname -n`:0.0 ;;
    _:*) DISPLAY=`uname -n`$DISPLAY ;;
    *) ;;
esac

set `cat ${MADELEINE_ROOT}/.madconf`

if test $MAD_DEBUG = on
then
    exec rsh $1 ${MADELEINE_ROOT}/bin/shm/maddebug "$DISPLAY" $command
else
    exec rsh $1 $command
fi
